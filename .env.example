# Example .env for ligilarbo broken-links plugin
# Copy this file to `.env` and adjust values locally.

# When true the plugin will only warn about broken links and not fail the build.
# If you want the build to fail on broken links set BROKEN_LINKS_STRICT=1 instead.
BROKEN_LINKS_WARN_ONLY=true
#BROKEN_LINKS_STRICT=0

# Network and concurrency
#BROKEN_LINKS_TIMEOUT=8000
#BROKEN_LINKS_CONCURRENCY=5
#BROKEN_LINKS_RETRIES=1
#BROKEN_LINKS_RETRY_DELAY=500

# Caching behaviour
#BROKEN_LINKS_CACHE=true
#BROKEN_LINKS_CACHE_FILE=.link-check-cache.json
#BROKEN_LINKS_CACHE_MAX_AGE_MS=60000

# User agent controls
#BROKEN_LINKS_USER_AGENT=ligilarbo-link-check/1.0 (+https://mooship.co.za) Node
#BROKEN_LINKS_RANDOMIZE_UA=true

# Allow list patterns (comma-separated). Values are tried as RegExp first.
#BROKEN_LINKS_ALLOW_PATTERNS=https://example.com,https://another.example

# Status codes to treat as 'fail'
#BROKEN_LINKS_FAIL_ON=400,404,410

# Other toggles
#SKIP_LINK_CHECK=0
