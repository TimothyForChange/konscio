---
import Layout from './Layout.astro';
import 'remixicon/fonts/remixicon.css';
import BackButton from '../components/BackButton.astro';
import ColonialSection from '../components/ColonialSection.astro';
import CountryHeader from '../components/CountryHeader.astro';
import CrisisSection from '../components/CrisisSection.astro';
import HistoricalContext from '../components/HistoricalContext.astro';
import HumanitarianImpact from '../components/HumanitarianImpact.astro';
import TakeAction from '../components/TakeAction.astro';

const { countryData } = Astro.props;
---

<Layout title={`${countryData.name} Crisis - Timothy Brits`}>
  <div class='page-wrapper'>
    <main class='container' id='container'>
      <div class='country-page'>
        <CountryHeader countryName={countryData.name} />

        <CrisisSection summary={countryData.currentCrisisSummary} />

        <ColonialSection colonialRoot={countryData.colonialRoot} />

        <HistoricalContext coreTerms={countryData.coreTerms} />

        {
          countryData.humanitarianImpact && (
            <HumanitarianImpact
              humanitarianImpact={countryData.humanitarianImpact}
            />
          )
        }

        {
          countryData.takeAction && (
            <TakeAction takeAction={countryData.takeAction} />
          )
        }

        <div class='country-bottom-back'>
          <BackButton />
        </div>
      </div>
    </main>
  </div>
</Layout>
