---
import '@fontsource-variable/geist';
import '../styles/reset.css';
import '../styles/global.css';
import { readdirSync } from 'fs';
import { dirname, join } from 'path';
import { fileURLToPath } from 'url';
import { sift } from 'radash';
import Footer from '../components/layout/Footer.astro';
import countriesList from '../data/countries.json';

const __dirname = dirname(fileURLToPath(import.meta.url));
const countriesDir = join(__dirname, '../../public/countries');
const availableCountryImages = readdirSync(countriesDir)
  .filter((file) => file.endsWith('.webp'))
  .map((file) => file.replace('.webp', ''));

export let title = 'Timothy for Change';
export let description: string | undefined;
export let canonicalUrl: string | undefined;
export let countrySlug: string | undefined;
export let articleSchema: Record<string, unknown> | undefined;
export let noIndex: boolean | undefined;

const baseLdObject = {
  '@context': 'https://schema.org',
  '@graph': [
    {
      '@type': 'Person',
      '@id': 'https://www.timothyforchange.co.za/#person',
      name: 'Timothy Brits',
      alternateName: 'Timothy',
      url: 'https://www.timothyforchange.co.za',
      jobTitle: 'Humanitarian Advocate',
      address: {
        '@type': 'PostalAddress',
        addressLocality: 'Pretoria',
        addressCountry: 'ZA',
      },
      knowsAbout: ['Humanitarian Awareness', 'Global Crises'],
      sameAs: [
        'https://github.com/TimothyForChange',
        'https://www.instagram.com/timothyforchange/',
        'https://www.threads.com/@timothyforchange',
      ],
    },
    {
      '@type': 'WebSite',
      '@id': 'https://www.timothyforchange.co.za/#website',
      url: 'https://www.timothyforchange.co.za',
      name: 'Timothy for Change',
      description:
        'Timothy for Change - A platform for critical humanitarian analysis',
      publisher: {
        '@id': 'https://www.timothyforchange.co.za/#person',
      },
      potentialAction: {
        '@type': 'SearchAction',
        target: {
          '@type': 'EntryPoint',
          urlTemplate:
            'https://www.timothyforchange.co.za/?search={search_term_string}',
        },
        'query-input': 'required name=search_term_string',
      },
    },
  ],
};

const ldObject = articleSchema
  ? {
      ...baseLdObject,
      '@graph': [...baseLdObject['@graph'], articleSchema],
    }
  : baseLdObject;
const ldJson = JSON.stringify(ldObject, undefined, 2);
const countryNames = Array.isArray(countriesList)
  ? sift(countriesList.map((c) => c.name)).join(', ')
  : '';
const defaultDescription = `Timothy for Change - A platform for critical humanitarian analysis. Learn about ongoing conflicts and humanitarian issues in ${countryNames}.`;
const baseKeywords = [
  'Timothy for Change',
  'humanitarian analysis',
  'critical analysis',
  'global crises',
  'human rights',
  'social justice',
  'humanitarian awareness',
  'imperialism',
  'capitalism',
  'global south',
  'colonialism',
  'Timothy Brits',
];
const countryNamesArray = Array.isArray(countriesList)
  ? sift(countriesList.map((c) => c.name))
  : [];
const keywordsList = [...baseKeywords, ...countryNamesArray].join(', ');
function trimDescription(desc: string, max = 160) {
  if (!desc) {
    return '';
  }
  const cleaned = desc.replaceAll(/\s+/g, ' ').trim();
  return cleaned.length > max
    ? cleaned.slice(0, max - 1).trimEnd() + 'â€¦'
    : cleaned;
}

const rawDescription = description || defaultDescription;
const pageDescription = trimDescription(rawDescription, 160);
const pageCanonicalUrl = canonicalUrl || 'https://www.timothyforchange.co.za/';

const ogImage =
  countrySlug && availableCountryImages.includes(countrySlug)
    ? `/countries/${countrySlug}.webp`
    : countrySlug
      ? undefined
      : '/united-nations.webp';
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf8' />
    <meta name='description' content={pageDescription} />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='author' content='Timothy for Change' />
    <meta name='keywords' content={keywordsList} />
    <meta
      name='robots'
      content={noIndex ? 'noindex, follow' : 'index, follow'}
    />
    <meta property='og:type' content='website' />
    <meta property='og:url' content={pageCanonicalUrl} />
    <meta property='og:title' content={title} />
    <meta property='og:description' content={pageDescription} />
    <meta property='og:site_name' content='Timothy for Change' />
    {ogImage && <meta property='og:image' content={ogImage} />}
    <meta name='twitter:card' content='summary' />
    <meta name='twitter:title' content={title} />
    <meta name='twitter:description' content={pageDescription} />
    {ogImage && <meta name='twitter:image' content={ogImage} />}
    <meta name='color-scheme' content='light dark' />
    <link rel='canonical' href={pageCanonicalUrl} />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <title>{title}</title>
    <link rel='sitemap' href='/sitemap-index.xml' />
    <script type='application/ld+json' set:html={ldJson} />
  </head>
  <body>
    <a class='skip-link' href='#container'>Skip to main content</a>
    <slot />
    <Footer />
    <script is:inline>
      document.addEventListener('DOMContentLoaded', () => {
        const skipLink = document.querySelector('.skip-link');
        if (skipLink) {
          skipLink.addEventListener('click', (event_) => {
            event_.preventDefault();
            const target = document.querySelector('#container');
            if (target) {
              target.focus();
              target.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
          });
        }
      });
    </script>
  </body>
</html>
