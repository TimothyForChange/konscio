---
import "@fontsource/poppins/400.css";
import "@fontsource/poppins/500.css";
import "@fontsource/poppins/600.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Timothy Brits - Software Engineer specializing in web development. Explore my professional journey, open-source contributions, and connect with me on LinkedIn and GitHub.' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <meta name='author' content='Timothy Brits' />
    <meta name='keywords' content='Timothy Brits, Software Engineer, Web Developer, JavaScript, TypeScript, Blazor, React, Node.js, Go,Portfolio, LinkedIn, GitHub' />
    <meta name='robots' content='index, follow' />
    <meta property='og:type' content='website' />
    <meta property='og:url' content='https://timothybrits.com/' />
    <meta property='og:title' content={title} />
    <meta property='og:description' content='Timothy Brits - Software Engineer specialising in web development. Explore my professional journey and open-source contributions.' />
    <meta property='og:site_name' content='Timothy Brits Portfolio' />
    <link rel='apple-touch-icon' sizes='180x180' href='/apple-touch-icon.png' />
    <link rel='icon' type='image/png' sizes='32x32' href='/favicon-32x32.png' />
    <link rel='icon' type='image/png' sizes='16x16' href='/favicon-16x16.png' />
    <link rel='manifest' href='/site.webmanifest' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  :root {
    --bg: #181818;
    --bg-card: #232323;
    --bg-surface: #292929;
    --border: #555555;

    --accent-primary: #ff3366;
    --accent-secondary: #66b3ff;
    --accent-green: #33cc66;

    --hot-orange: #ff6b35;
    --hot-purple: #a855f7;
    --hot-cyan: #06b6d4;
    --hot-yellow: #eab308;
    --hot-emerald: #10b981;

    --text-primary: #fff;
    --text-secondary: #e0e0e0;
    --text-muted: #b3b3b3;
  }

  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html {
    font-family: 'Poppins', system-ui, sans-serif;
    background: var(--bg);
    color: var(--text-primary);
  }
</style>
