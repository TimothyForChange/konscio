---
import { config } from '../config';
import SocialLinks from './SocialLinks.astro';

const currentYear = new Date().getFullYear();
---

<footer class='site-footer'>
  <div class='footer-content'>
    <div class='footer-info'>
      <p class='copyright'>
        © {currentYear}
        {config.author.name}. Licensed under <a
          href='https://creativecommons.org/publicdomain/zero/1.0/deed.en'
          target='_blank'>CC0 1.0 Universal</a
        >.
      </p>
      <p class='theme-credit'>
        Powered by <a href='https://astro.build' target='_blank' rel='noopener'>Astro</a>
        • <a href='https://github.com/timothyforchange/konscio' target='_blank' rel='noopener'
          >Source Code on GitHub</a
        >
      </p>
    </div>

    <SocialLinks />
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .copyright,
  .theme-credit {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .copyright a {
    color: var(--color-accent);
    text-decoration: underline;
    font-weight: 500;
  }

  .copyright a:hover,
  .copyright a:focus {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      text-align: center;
      gap: calc(var(--grid-unit) * 2);
    }

    .footer-info {
      order: 2;
    }

    .social-links {
      order: 1;
    }
  }
</style>
