---
import { config } from "../config";
import SocialLinks from "./SocialLinks.astro";

const currentYear = new Date().getFullYear();
---

<footer class="site-footer">
  <div class="footer-content">
    <div class="footer-info">
      <p class="copyright">
        © {currentYear}
        {config.author.name}. Licensed under <a
          href="https://creativecommons.org/publicdomain/zero/1.0/deed.en"
          target="_blank"
          rel="noopener">CC0 1.0 Universal</a
        >
      </p>

      <p class="privacy-link" data-astro-prefetch>
        <a href="/privacy-policy">Privacy Policy</a>
      </p>

      <p class="source-code">
        <a
          href="https://github.com/CodeAndHammer/konscio"
          target="_blank"
          rel="noopener">Source Code on GitHub</a
        >
      </p>

      <div class="bmc-button-wrapper">
        <script
          is:inline
          type="text/javascript"
          src="https://cdnjs.buymeacoffee.com/1.0.0/button.prod.min.js"
          data-name="bmc-button"
          data-slug="theredsoil"
          data-color="#dc2626"
          data-emoji="☕"
          data-font="Inter"
          data-text="Buy me a coffee"
          data-outline-color="#ffffff"
          data-font-color="#ffffff"
          data-coffee-color="#FFDD00"></script>
      </div>
    </div>

    <SocialLinks />
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .copyright,
  .source-code,
  .privacy-link {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .copyright a,
  .source-code a,
  .privacy-link a {
    color: var(--color-accent);
    text-decoration: underline;
    font-weight: 500;
  }

  .copyright a:hover,
  .copyright a:focus,
  .source-code a:hover,
  .source-code a:focus,
  .privacy-link a:hover,
  .privacy-link a:focus {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer-info {
      order: 1;
    }
  }

  .bmc-button-wrapper {
    margin-top: calc(var(--grid-unit) * 2);
    display: flex;
    align-items: flex-start;
    transform: scale(0.75);
    transform-origin: left top;
    max-width: 300px;
  }
</style>
