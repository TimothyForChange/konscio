---
import { config } from '../config';
import SocialLinks from './SocialLinks.astro';

const currentYear = new Date().getFullYear();
---

<footer class='site-footer'>
  <div class='footer-content'>
    <div class='footer-info'>
      <p class='copyright'>
        Â© {currentYear}
        {config.author.name}. Licensed under <a
          href='https://creativecommons.org/publicdomain/zero/1.0/deed.en'
          target='_blank'
          rel='noopener'>CC0 1.0 Universal</a
        >
      </p>
      <p class='source-code'>
        <a
          href='https://github.com/timothyforchange/konscio'
          target='_blank'
          rel='noopener'>Source Code on GitHub</a
        >
      </p>
      <p class='privacy-link' data-astro-prefetch>
        <a href='/privacy-policy'>Privacy Policy</a>
      </p>
      <div class='kofi-support'>
        <a href='https://ko-fi.com/T6T31HRCAR' target='_blank' rel='noopener'>
          <img
            height='36'
            src='https://storage.ko-fi.com/cdn/kofi6.png?v=6'
            alt='Buy Me a Coffee at ko-fi.com'
          />
        </a>
      </div>
    </div>

    <SocialLinks />
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .copyright,
  .source-code,
  .privacy-link {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .kofi-support {
    margin-top: calc(var(--grid-unit) / 4);
  }

  .kofi-support img {
    border: none;
    border-radius: 4px;
    transition: opacity 0.2s ease;
    height: 36px;
  }

  .kofi-support a:hover img,
  .kofi-support a:focus img {
    opacity: 0.8;
  }

  .copyright a,
  .source-code a,
  .privacy-link a {
    color: var(--color-accent);
    text-decoration: underline;
    font-weight: 500;
  }

  .copyright a:hover,
  .copyright a:focus,
  .source-code a:hover,
  .source-code a:focus,
  .privacy-link a:hover,
  .privacy-link a:focus {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer-info {
      order: 1;
    }
  }
</style>
