---
import { config } from '../config';
import SocialLinks from './SocialLinks.astro';

const currentYear = new Date().getFullYear();
---

<footer class='site-footer'>
  <div class='footer-content'>
    <div class='footer-info'>
      <p class='copyright'>
        Â© {currentYear}
        {config.author.name}. Licensed under <a
          href='https://creativecommons.org/publicdomain/zero/1.0/deed.en'
          target='_blank'
          rel='noopener'>CC0 1.0 Universal</a
        >
      </p>
      <p class='source-code'>
        <a
          href='https://github.com/timothyforchange/konscio'
          target='_blank'
          rel='noopener'>Source Code on GitHub</a
        >
      </p>
      <p class='privacy-link' data-astro-prefetch>
        <a href='/privacy-policy'>Privacy Policy</a>
      </p>
      <div
        id='wcb'
        class='carbonbadge'
        style='justify-content: flex-start; display: flex;'
      >
      </div>
      <script
        is:inline
        src='https://unpkg.com/website-carbon-badges@1.1.3/b.min.js'
        defer></script>
      <script>
        const theme = document.documentElement.dataset.theme;
        const wcb = document.getElementById('wcb');
        if (wcb) {
          if (theme === 'dark') {
            wcb.classList.add('wcb-d');
          } else {
            wcb.classList.remove('wcb-d');
          }
        }
      </script>
    </div>

    <SocialLinks />
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-surface);
    border-top: 2px solid var(--color-border);
    margin-top: auto;
    padding: calc(var(--grid-unit) * 4) 0;
  }

  .footer-content {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: 0 var(--content-padding);
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: calc(var(--grid-unit) * 2);
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: calc(var(--grid-unit) / 2);
  }

  .copyright,
  .source-code,
  .privacy-link {
    margin: 0;
    font-size: 0.9rem;
    color: var(--color-text-muted);
  }

  .carbonbadge {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: flex-start;
    margin: 0.5rem 0 0 0;
    flex-wrap: wrap;
    gap: 0.5rem;
    max-width: 100%;
    overflow: visible;
  }

  .carbonbadge .carbon-rating {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    margin-top: 0.25rem;
  }

  @media (max-width: 480px) {
    .carbonbadge {
      flex-direction: column;
      align-items: center;
      justify-content: center;
      width: 100%;
      margin: 0.5rem auto 0 auto;
      padding: 0 0.5rem;
      box-sizing: border-box;
    }
    .carbonbadge .carbon-rating {
      margin-top: 0.25rem;
      text-align: center;
      width: auto;
    }

    #wcb {
      width: 100%;
      min-width: 0;
      overflow: visible;
      justify-content: center;
      align-items: center;
    }

    #wcb .carbon-text,
    #wcb .carbon-savings,
    #wcb .carbon-footprint,
    #wcb .carbon-annotation,
    #wcb .wcb-text,
    #wcb .carbon-badge-subtext,
    #wcb .carbon-badge-text,
    #wcb > span,
    #wcb > div:not(.carbon-rating):not(a) {
      display: block !important;
      width: 100% !important;
      text-align: center !important;
      white-space: normal !important;
      word-break: break-word !important;
      font-size: 0.85rem !important;
      line-height: 1.2 !important;
      margin: 0.25rem 0 !important;
    }
  }

  #wcb img,
  #wcb iframe,
  .carbonbadge img,
  .carbonbadge iframe {
    max-width: 100%;
    height: auto !important;
    transform: none !important;
    display: block;
  }

  .carbonbadge .carbon-rating {
    width: auto;
  }

  .copyright a,
  .source-code a,
  .privacy-link a {
    color: var(--color-accent);
    text-decoration: underline;
    font-weight: 500;
  }

  .carbon-rating a {
    color: var(--color-success, var(--color-accent));
    text-decoration: underline;
    font-weight: 500;
  }

  .copyright a:hover,
  .copyright a:focus,
  .source-code a:hover,
  .source-code a:focus,
  .privacy-link a:hover,
  .privacy-link a:focus {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  .carbon-rating a:hover,
  .carbon-rating a:focus {
    color: var(--color-text-primary);
    text-decoration: none;
  }

  @media (max-width: 768px) {
    .footer-info {
      order: 1;
    }
  }
</style>
