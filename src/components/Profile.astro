---
import userData from '../data/user.json';

const { name, profession, bio } = userData;

const replacements: Array<[RegExp, string]> = [
  [
    /Palestine/g,
    '<a href="/palestine" class="country-link">Palestine <span class="country-emoji">ðŸ‡µðŸ‡¸</span></a>',
  ],
  [
    /Sudan/g,
    '<a href="/sudan" class="country-link">Sudan <span class="country-emoji">ðŸ‡¸ðŸ‡©</span></a>',
  ],
  [
    /Myanmar/g,
    '<a href="/myanmar" class="country-link">Myanmar <span class="country-emoji">ðŸ‡²ðŸ‡²</span></a>',
  ],
  [
    /Ukraine/g,
    '<a href="/ukraine" class="country-link">Ukraine <span class="country-emoji">ðŸ‡ºðŸ‡¦</span></a>',
  ],
  [
    /the DRC/g,
    '<a href="/drc" class="country-link">the DRC <span class="country-emoji">ðŸ‡¨ðŸ‡©</span></a>',
  ],
];
const bioHtml = replacements.reduce(
  (acc, [pattern, value]) => acc.replace(pattern, value),
  String(bio)
);
---

<header class='profile'>
  <div class='profile-picture-content'>
    <figure class='profile-picture' id='profile-picture'>
      <img
        src='/me.webp'
        alt='Portrait of Timothy Brits'
        width='80'
        height='80'
        loading='eager'
        decoding='sync'
      />
    </figure>
  </div>

  <div class='profile-data'>
    <h1 class='profile-name'>{name}</h1>
    <p class='profile-profession'>{profession}</p>
    <div class='profile-bio'>
      <p class='profile-bio-text' set:html={bioHtml} />
    </div>
  </div>
</header>

<style>
  .profile {
    margin-top: 2rem;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .profile-picture-content {
    padding: 0.25rem;
    border-radius: 100%;
    border: 2px solid var(--border);
    background: var(--bg-card);
  }

  .profile-picture {
    width: 80px;
    height: 80px;
    border-radius: 100%;
    overflow: hidden;
    background: var(--bg-surface);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    outline: none;
  }

  .profile-picture img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .profile-data {
    margin-top: 1.125rem;
    text-align: center;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .profile-profession {
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-secondary);
  }

  .profile-bio {
    margin-top: 1rem;
    max-width: 24rem;
  }

  .profile-bio-text {
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--text-primary);
    line-height: 1.6;
    text-align: center;
  }

  .profile-bio .profile-bio-text a:focus-visible {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
  }

  :global(.country-link) {
    border-radius: 6px;
    padding: 8px 6px;
    margin: -4px -2px;
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    min-height: 44px;
    min-width: 44px;
    line-height: 1.4;
    text-align: center;
    font-weight: 600;
    transition: background-color 0.2s ease;
    position: relative;
    box-sizing: border-box;
  }

  :global(.country-link:hover) {
    background-color: var(--accent-primary);
    color: var(--on-accent);
    text-decoration: none;
  }

  :global(.country-emoji) {
    display: inline-flex;
    align-items: center;
    font-size: 1em;
    line-height: 1;
    margin-left: 0.15rem;
    transform: translateY(-0.03em);
  }

  :global(.country-link),
  :global(.country-link:visited) {
    text-decoration: underline;
    text-decoration-thickness: 1.2px;
    text-underline-offset: 2px;
  }

  :global(.country-link:focus-visible) {
    outline: 2px solid var(--accent-primary);
    outline-offset: 2px;
    background-color: var(--accent-primary);
    color: var(--on-accent);
  }

  @media (max-width: 768px) {
    :global(.country-link) {
      padding: 10px 8px;
      margin: -6px -4px;
      border-radius: 8px;
      font-size: 1.1rem;
      min-height: 48px;
      min-width: 48px;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    :global(.country-link) {
      padding: 12px 10px;
      margin: -8px -6px;
      min-height: 48px;
      min-width: 48px;
      border-radius: 8px;
    }

    :global(.country-link:active) {
      background-color: var(--accent-primary);
      color: var(--on-accent);
      text-decoration: none;
      transform: scale(0.95);
      transition:
        background-color 0.1s ease,
        transform 0.1s ease;
    }
  }
</style>
