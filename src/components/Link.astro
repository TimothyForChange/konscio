---
import 'remixicon/fonts/remixicon.css';

const { icon, title, description, url, colorIndex = 0 } = Astro.props;

const hotColors = [
  'var(--accent-primary)',
  'var(--hot-orange)',
  'var(--hot-purple)',
  'var(--hot-cyan)',
  'var(--hot-yellow)',
  'var(--hot-emerald)',
  'var(--hot-pink)',
  'var(--hot-blue)',
];

const accentClass = `link-accent-${colorIndex % hotColors.length}`;
---

<a href={url} class={`link ${accentClass} fade-in`}>
  <span class='link-icon' aria-hidden='true'>
    <i class={'ri-' + icon} aria-hidden='true'></i>
  </span>
  <div class='link-content'>
    <span class='sr-only'>{title} icon</span>
    <h2 class='link-title'>{title}</h2>
    <p class='link-description'>{description}</p>
  </div>
</a>
