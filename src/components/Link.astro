---
import 'remixicon/fonts/remixicon.css'

interface Props {
  icon: string
  title: string
  description: string
  url: string
}

const { icon, title, description, url } = Astro.props
---

<a href={url} class='link'>
  <span class='link-icon'>
    <i class={'ri-' + icon}></i>
  </span>
  <div class='link-content'>
    <h2 class='link-title'>{title}</h2>
    <p class='link-description'>{description}</p>
  </div>
</a>

<style>
  .link {
    padding: 0.75rem;
    display: flex;
    border: 1px solid var(--ocean-border);
    border-radius: 1rem;
    text-decoration: none;
    background: var(--ocean-bg-alt);
    transition: border 0.2s, background 0.2s;
  }

  .link:hover {
    border: 1px solid var(--ocean-blue);
    background: var(--ocean-surface);
  }

  .link-icon {
    width: 3rem;
    height: 3rem;
    min-width: 3rem;
    min-height: 3rem;
    margin-right: 1.125rem;
    background: var(--ocean-surface);
    border-radius: 0.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
  }
  
  .link-icon i {
    font-size: 1.5rem;
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    justify-content: center;
    align-items: center;
    color: var(--ocean-cyan);
  }

  .link-title,
  .link-description {
    font-size: 1rem;
  }

  .link-title {
    color: var(--ocean-blue);
    font-weight: 500;
  }

  .link-description {
    color: var(--ocean-fg-muted);
    font-weight: 400;
    margin-top: 0.125rem;
  }
</style>
