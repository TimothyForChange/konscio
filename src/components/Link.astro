---
import 'remixicon/fonts/remixicon.css';

const { icon, title, description, url, colorIndex = 0 } = Astro.props;

const hotColors = [
  'var(--accent-primary)',
  'var(--hot-orange)',
  'var(--hot-purple)',
  'var(--hot-cyan)',
  'var(--hot-yellow)',
  'var(--hot-emerald)',
];

const accentClass = `link-accent-${colorIndex % hotColors.length}`;
---

<a href={url} class={`link ${accentClass}`}>
  <span class='link-icon'>
    <i class={'ri-' + icon}></i>
  </span>
  <div class='link-content'>
    <h2 class='link-title'>{title}</h2>
    <p class='link-description'>{description}</p>
  </div>
</a>

<style is:global>
  .link {
    padding: 1rem;
    display: flex;
    border: 1px solid var(--border);
    border-radius: 0.5rem;
    text-decoration: none;
    background: var(--bg-card);
    transition: all 0.2s ease;
    min-height: 5.5rem;
    box-sizing: border-box;
    align-items: center;
  }

  .link:hover {
    border: 1px solid var(--link-accent);
    background: var(--bg-surface);
    transform: translateY(-1px);
  }

  .link-icon {
    width: 3rem;
    height: 3rem;
    min-width: 3rem;
    min-height: 3rem;
    margin-right: 1rem;
    background: var(--bg-surface);
    border-radius: 0.375rem;
    display: flex;
    justify-content: center;
    align-items: center;
    transition: background 0.2s ease;
    flex-shrink: 0;
  }

  .link-content {
    flex: 1;
    min-height: 3rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .link-icon i {
    font-size: 1.25rem;
    color: var(--text-secondary);
    transition: color 0.2s ease;
  }

  .link:hover .link-icon {
    background: var(--link-accent);
  }

  .link:hover .link-icon i {
    color: white;
  }

  .link-title {
    color: #fff;
    font-weight: 700;
    font-size: 1.05rem;
    margin-bottom: 0.25rem;
  }

  .link-description {
    color: #e0e0e0;
    font-weight: 400;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  .link-accent-0 {
    --link-accent: var(--accent-primary);
  }
  .link-accent-1 {
    --link-accent: var(--hot-orange);
  }
  .link-accent-2 {
    --link-accent: var(--hot-purple);
  }
  .link-accent-3 {
    --link-accent: var(--hot-cyan);
  }
  .link-accent-4 {
    --link-accent: var(--hot-yellow);
  }
  .link-accent-5 {
    --link-accent: var(--hot-emerald);
  }
</style>
