---
import 'remixicon/fonts/remixicon.css';
import { isString } from 'radash';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
  url?: string;
  colorIndex?: number;
}

const { icon, title, description, url } = Astro.props as Props;

const safeTitle = isString(title) ? title : '';
const safeUrl = isString(url) ? url : '';

if (!safeTitle || !safeUrl) {
  return null;
}

const sanitizedUrl = safeUrl.startsWith('http')
  ? safeUrl
  : `https://${safeUrl}`;
const iconClass = isString(icon) ? `ri-${icon}` : 'ri-link';
---

<a
  href={sanitizedUrl}
  class='link'
  target='_blank'
  rel='noopener noreferrer'
  aria-label={`${safeTitle} (opens in new tab)`}
>
  <span class='link-icon' aria-hidden='true'>
    <i class={iconClass} aria-hidden='true'></i>
  </span>
  <div class='link-content'>
    <h2 class='link-title'>{safeTitle}</h2>
    {
      description && typeof description === 'string' && (
        <p class='link-description'>{description}</p>
      )
    }
  </div>
</a>

<style>
  .link {
    --link-accent: var(--accent-primary);

    padding: var(--card-padding);
    display: flex;
    border: var(--card-border);
    border-radius: var(--card-radius);
    text-decoration: none;
    background: var(--bg-card);
    min-height: 5.5rem;
    align-items: center;
    transition: var(--card-transition);
    cursor: pointer;
    font: inherit;
    line-height: inherit;
    appearance: none;
    border-collapse: separate;
    background-clip: padding-box;
  }

  .link:hover {
    border-color: var(--link-accent);
    background: var(--bg-surface);
    transform: var(--hover-transform);
  }

  .link:active {
    transform: var(--active-transform);
    box-shadow: var(--active-shadow);
    background: var(--bg-surface);
    border-color: var(--link-accent);
    transition:
      transform 0.08s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.08s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .link-icon {
    width: 3rem;
    height: 3rem;
    margin-right: var(--gap-lg);
    background: var(--bg-surface);
    border-radius: var(--card-radius);
    display: flex;
    justify-content: center;
    align-items: center;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    flex-shrink: 0;
    color: var(--text-secondary);
  }

  .link-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
  }

  .link-icon i {
    font-size: 1.25rem;
    color: currentcolor;
    transition: color 0.2s ease;
  }

  .link:hover .link-icon {
    background: var(--link-accent);
    color: var(--on-accent);
  }

  .link-title {
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.05rem;
    margin-bottom: calc(var(--heading-gap) / 4);
  }

  .link-description {
    color: var(--text-secondary);
    font-weight: 400;
    font-size: var(--font-size-sm);
    line-height: var(--line-height-base);
  }

  @media (hover: none) and (pointer: coarse) {
    .link:hover,
    .link:active {
      background: var(--bg-card);
      border-color: var(--border);
      transform: none;
    }
  }
</style>
