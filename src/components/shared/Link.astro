---
import 'remixicon/fonts/remixicon.css';

export interface Props {
  icon?: string;
  title?: string;
  description?: string;
  url?: string;
  colorIndex?: number;
}

const { icon, title, description, url } = Astro.props as Props;

const safeTitle = title && typeof title === 'string' ? title : '';
const safeUrl = url && typeof url === 'string' ? url : '';

if (!safeTitle || !safeUrl) {
  return null;
}

const sanitizedUrl = safeUrl.startsWith('http')
  ? safeUrl
  : `https://${safeUrl}`;
const iconClass = icon && typeof icon === 'string' ? `ri-${icon}` : 'ri-link';
---

<a href={sanitizedUrl} class='link' target='_blank' rel='noopener noreferrer'>
  <span class='link-icon' aria-hidden='true'>
    <i class={iconClass} aria-hidden='true'></i>
  </span>
  <div class='link-content'>
    <h2 class='link-title'>{safeTitle}</h2>
    {
      description && typeof description === 'string' && (
        <p class='link-description'>{description}</p>
      )
    }
  </div>
</a>

<style>
  .link {
    --link-accent: var(--accent-primary);

    padding: 1rem;
    display: flex;
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    background: var(--bg-card);
    min-height: 5.5rem;
    align-items: center;
    transition:
      background-color 0.18s ease,
      border-color 0.18s ease,
      transform 0.12s ease,
      box-shadow 0.12s ease;
    cursor: pointer;
    font: inherit;
    line-height: inherit;
    appearance: none;
    border-collapse: separate;
    background-clip: padding-box;
  }

  .link:hover {
    border-color: var(--link-accent);
    background: var(--bg-surface);
    transform: translateY(-1px);
  }

  .link:active {
    transform: scale(0.97) translateY(1.5px);
    box-shadow: 0 1.5px 6px 0 rgb(0 0 0 / 10%);
    background: var(--bg-surface);
    border-color: var(--link-accent);
    transition:
      transform 0.08s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.08s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .link-icon {
    width: 3rem;
    height: 3rem;
    margin-right: 1rem;
    background: var(--bg-surface);
    border-radius: 12px;
    display: flex;
    justify-content: center;
    align-items: center;
    transition:
      background-color 0.2s ease,
      color 0.2s ease;
    flex-shrink: 0;
    color: var(--text-secondary);
  }

  .link-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    text-align: left;
  }

  .link-icon i {
    font-size: 1.25rem;
    color: currentcolor;
    transition: color 0.2s ease;
  }

  .link:hover .link-icon {
    background: var(--link-accent);
    color: var(--on-accent);
  }

  .link-title {
    color: var(--text-primary);
    font-weight: 700;
    font-size: 1.05rem;
    margin-bottom: calc(var(--heading-gap) / 4);
  }

  .link-description {
    color: var(--text-secondary);
    font-weight: 400;
    font-size: 0.9rem;
    line-height: 1.5;
  }

  @media (hover: none) and (pointer: coarse) {
    .link:hover,
    .link:active {
      background: var(--bg-card);
      border-color: var(--border);
      transform: none;
    }
  }
</style>
