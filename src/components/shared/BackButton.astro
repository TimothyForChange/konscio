---
export interface Properties {
  href?: string;
  class?: string;
}

const { href = '/', class: className = '' } = Astro.props;

const sanitizedHref = href ? (href.startsWith('/') || href.startsWith('http') ? href : '/') : '/';
---

<a
  href={sanitizedHref}
  class={`back-button ${className} focus-strong`}
  aria-label='Go back to previous page'
>
  <i class='ri-arrow-left-long-line' aria-hidden='true'></i>
  Back to Home
</a>

<style>
  .back-button {
    display: inline-flex;
    align-items: center;
    gap: var(--gap-sm);
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: var(--font-weight-semibold);
    padding: 10px 14px;
    border-radius: var(--card-radius);
    min-height: 44px;
    min-width: 44px;
    background: var(--bg-surface);
    border: var(--card-border);
    transition:
      color 0.2s ease,
      background-color 0.2s ease,
      border-color 0.2s ease,
      transform 0.15s ease;
    box-sizing: border-box;
  }

  .back-button:hover {
    background-color: var(--accent-primary);
    color: var(--on-accent);
    border-color: var(--accent-primary);
    transform: var(--hover-transform);
  }

  .back-button:active {
    background-color: var(--accent-secondary);
    color: var(--on-accent);
    border-color: var(--accent-secondary);
    transform: scale(0.95) translateY(0);
    transition:
      background-color 0.1s ease,
      transform 0.1s ease;
  }

  @media (hover: none) and (pointer: coarse) {
    .back-button {
      padding: 14px 18px;
      min-height: 48px;
      min-width: 48px;
      border-radius: 10px;
    }

    .back-button:hover {
      background-color: var(--bg-surface);
      color: var(--text-secondary);
      border-color: var(--border);
      transform: none;
    }

    .back-button:active {
      background-color: var(--accent-primary);
      color: var(--on-accent);
      border-color: var(--accent-primary);
      transform: scale(0.95);
    }
  }

  @media (width >= 768px) {
    .back-button {
      padding: 10px 14px;
      min-height: 44px;
      min-width: 44px;
      font-size: inherit;
      border-radius: var(--card-radius);
    }
  }
</style>
