---
import { countryMetadata } from '../../scripts/utils';
import BackButton from '../shared/BackButton.astro';
import CountryAvatar from '../ui/CountryAvatar.astro';

export interface Props {
  countryName: string;
}

const { countryName } = Astro.props;
const flagInfo = countryMetadata[countryName];
---

<header class='country-header'>
  <BackButton />
  <h1 class='country-title'>
    {
      flagInfo ? (
        <CountryAvatar
          emoji={flagInfo.emoji}
          ariaLabel={flagInfo.ariaLabel}
          countryName={countryName}
        />
      ) : null
    }
    {countryName}
  </h1>
</header>

<style>
  .country-header {
    margin-bottom: 2rem;
  }

  .country-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1.25rem 0;
    line-height: 1.05;
  }

  @media (max-width: 768px) {
    .country-title {
      font-size: 2rem;
    }
  }
</style>
