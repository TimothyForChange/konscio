---
import { formatParagraphs } from '../../utils/text.ts';

export interface Properties {
  imperialRoot: {
    imperialPower?: string;
    legacy?: string;
  };
}

const { imperialRoot } = Astro.props as Properties;
---

<section class='imperial-section' aria-labelledby='imperial-heading'>
  <h2 id='imperial-heading'>The Imperial Root</h2>
  <h3>{imperialRoot.imperialPower || 'â€”'}</h3>
  {
    imperialRoot.legacy &&
      formatParagraphs(imperialRoot.legacy).map((html: string) => (
        <p set:html={html} />
      ))
  }
</section>

<style>
  .imperial-section {
    margin-bottom: var(--section-gap);
  }

  .imperial-section h2 {
    font-size: var(--section-heading-size);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
  }

  .imperial-section h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--gap);
    margin-top: var(--heading-gap);
  }

  .imperial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .imperial-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
