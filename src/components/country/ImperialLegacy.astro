---
import { isObject, isString } from 'radash';
import { formatText } from '../../utils/utils';

export interface Props {
  imperialRoot?: {
    imperialPower?: string;
    legacy?: string;
  };
}

const { imperialRoot } = Astro.props as Props;

const safeImperialRoot = isObject(imperialRoot) ? imperialRoot : {};

const hasData = safeImperialRoot.imperialPower || safeImperialRoot.legacy;
if (!hasData) {
  return null;
}

const safeImperialPower = isString(safeImperialRoot.imperialPower)
  ? safeImperialRoot.imperialPower
  : '';
const safeLegacy = isString(safeImperialRoot.legacy)
  ? safeImperialRoot.legacy
  : '';
---

<section class='imperial-section' aria-labelledby='imperial-heading'>
  <h2 id='imperial-heading'>The Imperial Root</h2>
  <h3>{safeImperialPower || 'â€”'}</h3>
  {safeLegacy && <p set:html={formatText(safeLegacy)} />}
</section>

<style>
  .imperial-section {
    margin-bottom: var(--section-gap);
  }

  .imperial-section h2 {
    font-size: var(--section-heading-size);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
  }

  .imperial-section h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--gap);
    margin-top: var(--heading-gap);
  }

  .imperial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .imperial-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
