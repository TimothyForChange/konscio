---
import { formatText } from '../../utils/text.ts';

export interface Properties {
  summary: string;
}

const { summary } = Astro.props;
---

<section class='crisis-section' aria-labelledby='crisis-heading'>
  <h2 id='crisis-heading'>Current Crisis Summary</h2>
  <p set:html={formatText(summary)} />
</section>

<style>
  .crisis-section {
    margin-bottom: var(--section-gap);
  }

  .crisis-section h2 {
    font-size: var(--section-heading-size);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
  }

  @media (width >= 768px) {
    .crisis-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
