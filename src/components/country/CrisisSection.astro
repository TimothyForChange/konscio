---
import { formatRichText } from '../../utils/text.ts';

export interface Properties {
  summary: string;
}

const { summary } = Astro.props;
---

<section class='crisis-section section' aria-labelledby='crisis-heading'>
  <h2 id='crisis-heading' class='section-heading'>Current Crisis Summary</h2>
  {
    (() => {
      const formatted = formatRichText(summary);
      if (Array.isArray(formatted)) {
        return formatted.map((html: string) => <p set:html={html} />);
      }
      return <p set:html={formatted} />;
    })()
  }
</section>

<style>
  @media (min-width: 768px) {
    .crisis-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
