---
import { formatText } from '../../scripts/utils';

export interface Props {
  summary: string;
}

const { summary } = Astro.props;
---

<section class='crisis-section' aria-labelledby='crisis-heading'>
  <h2 id='crisis-heading'>Current Crisis Summary</h2>
  <p set:html={formatText(summary)} />
</section>

<style>
  .crisis-section {
    margin-bottom: 1.5rem;
  }

  .crisis-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    border-bottom: 2px solid var(--accent-primary);
    padding-bottom: 0.5rem;
  }

  @media (min-width: 769px) {
    .crisis-section h2 {
      font-size: 1.5rem;
    }
  }
</style>
