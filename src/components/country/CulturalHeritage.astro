---
import { isString } from 'radash';
import { formatKeyToTitle, formatText } from '../../utils';

export interface Properties {
  culturalHeritage?: Record<string, string>;
}

const { culturalHeritage } = Astro.props as Properties;
---

{
  culturalHeritage && Object.keys(culturalHeritage).length > 0 && (
    <section class='cultural-section' aria-labelledby='cultural-heading'>
      <h2 id='cultural-heading'>Cultural Heritage</h2>

      {Object.entries(culturalHeritage)
        .filter(
          ([key, value]) =>
            isString(key) &&
            isString(value) &&
            key.trim() !== '' &&
            value.trim() !== ''
        )
        .map(([key, value]) => (
          <div class='term-group'>
            <h3>{formatKeyToTitle(key)}</h3>
            <p set:html={formatText(value)} />
          </div>
        ))}
    </section>
  )
}

<style>
  .cultural-section {
    margin-bottom: var(--section-gap);
  }

  .cultural-section h2 {
    font-size: var(--section-heading-size);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
  }

  .cultural-section h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--gap);
    margin-top: var(--heading-gap);
  }

  .term-group {
    margin-bottom: calc(var(--heading-gap) * 1.25);
  }

  .term-group:last-child {
    margin-bottom: 0;
  }

  .term-group:first-child h3 {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .cultural-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
