---
import { formatText } from '../../scripts/utils';

export interface Props {
  colonialRoot?: {
    colonialPower?: string;
    legacy?: string;
  };
}

const { colonialRoot } = Astro.props as Props | Record<string, unknown>;

if (!colonialRoot || typeof colonialRoot !== 'object') {
  return null;
}

const colonial = colonialRoot as { colonialPower?: string; legacy?: string };
---

<section class='colonial-section' aria-labelledby='colonial-heading'>
  <h2 id='colonial-heading'>The Colonial Root</h2>
  <h3>{colonial.colonialPower ?? 'â€”'}</h3>
  {colonial.legacy ? <p set:html={formatText(colonial.legacy)} /> : null}
</section>

<style>
  .colonial-section {
    margin-bottom: var(--section-gap);
  }

  .colonial-section h2 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: 2px solid var(--accent-primary);
    padding-bottom: 0.5rem;
  }

  .colonial-section h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    margin-top: var(--heading-gap);
  }

  .colonial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (min-width: 769px) {
    .colonial-section h2 {
      font-size: 1.5rem;
    }
  }
</style>
