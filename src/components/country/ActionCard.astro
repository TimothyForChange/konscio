---
import { formatRichText } from '../../utils/text.ts';

export interface ActionCardProperties {
  content: { title: string; description: string };
}
const { content } = Astro.props as ActionCardProperties;
---

<div class='action-card'>
  <div class='action-card-title'>{content.title}</div>
  <div
    class='action-card-description'
    set:html={(() => {
      const formatted = formatRichText(content.description);
      if (Array.isArray(formatted)) {
        return formatted.join('<br />');
      }
      return formatted;
    })()}
  />
</div>

<style>
  .action-card {
    background: var(--bg-surface);
    border: var(--card-border);
    border-radius: var(--button-radius);
    padding: var(--card-padding);
    color: var(--text-secondary);
    line-height: var(--line-height-base);
    box-shadow: var(--shadow-sm);
  }

  .action-card-title {
    font-weight: bold;
    color: var(--text-primary);
    margin-bottom: 0.5em;
    font-size: 1.1em;
  }

  .action-card-description {
    color: var(--text-secondary);
    font-size: 1em;
  }

  @media (min-width: 768px) {
    .action-card {
      padding: var(--card-padding);
    }
  }
</style>
