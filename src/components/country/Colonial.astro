---
import { isObject, isString } from 'radash';
import { formatText } from '../../utils';

export interface Properties {
  colonialRoot?: {
    colonialPower?: string;
    legacy?: string;
  };
}

const { colonialRoot } = Astro.props as Properties;

const safeColonialRoot = isObject(colonialRoot) ? colonialRoot : {};

const hasData = safeColonialRoot.colonialPower || safeColonialRoot.legacy;
if (!hasData) {
  return;
}

const safeColonialPower = isString(safeColonialRoot.colonialPower)
  ? safeColonialRoot.colonialPower
  : '';
const safeLegacy = isString(safeColonialRoot.legacy)
  ? safeColonialRoot.legacy
  : '';
---

<section class='colonial-section' aria-labelledby='colonial-heading'>
  <h2 id='colonial-heading'>The Colonial Root</h2>
  <h3>{safeColonialPower || 'â€”'}</h3>
  {safeLegacy && <p set:html={formatText(safeLegacy)} />}
</section>

<style>
  .colonial-section {
    margin-bottom: var(--section-gap);
  }

  .colonial-section h2 {
    font-size: var(--section-heading-size);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
  }

  .colonial-section h3 {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--gap);
    margin-top: var(--heading-gap);
  }

  .colonial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .colonial-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
