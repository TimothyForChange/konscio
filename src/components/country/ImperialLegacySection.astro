---
import { formatParagraphs } from '../../utils/text.ts';

export interface Properties {
  imperialRoot: {
    imperialPower?: string;
    legacy?: string;
  };
}

const { imperialRoot } = Astro.props as Properties;
---

<section class='imperial-section section' aria-labelledby='imperial-heading'>
  <h2 id='imperial-heading' class='section-heading'>The Imperial Root</h2>
  <h3 class='sub-heading'>{imperialRoot.imperialPower || 'â€”'}</h3>
  {
    imperialRoot.legacy &&
      formatParagraphs(imperialRoot.legacy).map((html: string) => <p set:html={html} />)
  }
</section>

<style>
  .imperial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .imperial-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
