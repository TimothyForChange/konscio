---
import { formatParagraphs } from '../../utils/text.ts';

export interface Properties {
  colonialRoot: {
    colonialPower?: string;
    legacy?: string;
  };
}

const { colonialRoot } = Astro.props as Properties;
---

{
  (colonialRoot.colonialPower || colonialRoot.legacy) && (
    <section
      class='colonial-section section'
      aria-labelledby='colonial-heading'
    >
      <h2 id='colonial-heading' class='section-heading'>
        The Colonial Root
      </h2>
      <h3 class='sub-heading'>{colonialRoot.colonialPower || 'â€”'}</h3>
      {colonialRoot.legacy &&
        formatParagraphs(colonialRoot.legacy).map((html: string) => (
          <p set:html={html} />
        ))}
    </section>
  )
}

<style>
  .colonial-section h3:first-of-type {
    margin-top: 0;
  }

  @media (width >= 768px) {
    .colonial-section h2 {
      font-size: var(--section-heading-size-lg);
    }
  }
</style>
