---
import type { HumanitarianImpact } from '../../types/country';
import { formatText } from '../../utils/text.ts';
import ImpactGrid from '../sections/ImpactGrid.astro';

export interface Properties {
  humanitarianImpact?: HumanitarianImpact;
  lastUpdated?: string;
}

const { humanitarianImpact, lastUpdated } = Astro.props as Properties;

if (!humanitarianImpact || !Array.isArray(humanitarianImpact)) {
  return;
}

const hasData = humanitarianImpact.some(
  (item) => item.description !== undefined && item.description !== ''
);

if (!hasData) {
  return;
}

const stats = humanitarianImpact
  .filter((item) => item.description !== undefined && item.description !== '')
  .map((item) => {
    const label = item.title;
    return {
      label,
      value: formatText(item.description),
    };
  });
---

<section class='humanitarian-section' aria-labelledby='humanitarian-heading'>
  <h2 id='humanitarian-heading'>Humanitarian Impact</h2>
  <ImpactGrid stats={stats} />
  <p class='humanitarian-disclaimer'>
    {lastUpdated ? `Last updated: ${lastUpdated}` : ''}
  </p>
</section>

<style>
  .humanitarian-section {
    background: var(--bg-card);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: var(--section-gap);
    margin-bottom: calc(var(--section-gap) - var(--gap-sm));
    box-shadow: var(--shadow-sm);
  }

  .humanitarian-section h2 {
    margin-top: 0;
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
  }

  .humanitarian-disclaimer {
    margin: var(--space-sm) 0;
    font-size: var(--font-size-sm);
    color: var(--text-muted);
    font-style: italic;
    line-height: 1.2;
    padding-top: var(--space-xs);
    text-align: center;
    opacity: 0.95;
  }

  .stat-item strong {
    color: var(--accent-primary);
    font-weight: var(--font-weight-bold);
    display: block;
    margin-bottom: var(--space-xs);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (min-width: 768px) {
    .humanitarian-section {
      padding: calc(var(--section-gap) + var(--space-xs))
        calc(var(--section-gap) + var(--space-xs))
        calc(var(--section-gap) - var(--space-xs));
      margin-bottom: var(--section-gap);
    }

    .humanitarian-disclaimer {
      justify-content: center;
      padding-top: 0.15rem;
      margin-top: var(--gap);
    }
  }
</style>
