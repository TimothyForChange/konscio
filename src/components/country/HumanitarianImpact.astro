---
import type { HumanitarianImpact } from '../../types';
import { formatText } from '../../utils';
import ImpactGrid from '../blocks/ImpactGrid.astro';

export interface Properties {
  humanitarianImpact?: HumanitarianImpact;
  lastUpdated?: string;
}

const { humanitarianImpact, lastUpdated } = Astro.props as Properties;

if (!humanitarianImpact || typeof humanitarianImpact !== 'object') {
  return;
}

const hasData = Object.values(humanitarianImpact).some(
  (value) => value !== undefined && value !== ''
);

if (!hasData) {
  return;
}

const stats = [];
if (humanitarianImpact.displaced !== undefined) {
  stats.push({
    label: 'Displaced',
    value: formatText(humanitarianImpact.displaced ?? '—'),
  });
}
if (humanitarianImpact.refugees !== undefined) {
  stats.push({
    label: 'Refugees',
    value: formatText(humanitarianImpact.refugees ?? '—'),
  });
}
if (humanitarianImpact.casualties !== undefined) {
  stats.push({
    label: 'Casualties',
    value: formatText(humanitarianImpact.casualties ?? '—'),
  });
}
if (humanitarianImpact.affected !== undefined) {
  stats.push({
    label: 'Affected',
    value: formatText(humanitarianImpact.affected ?? '—'),
  });
}
if (humanitarianImpact.poverty !== undefined) {
  stats.push({
    label: 'Living Below Poverty Line',
    value: formatText(humanitarianImpact.poverty ?? '—'),
  });
}
if (humanitarianImpact.childrenOutOfSchool !== undefined) {
  stats.push({
    label: 'Children Out of School',
    value: formatText(humanitarianImpact.childrenOutOfSchool ?? '—'),
  });
}
if (humanitarianImpact.healthSystemCollapsed !== undefined) {
  stats.push({
    label: 'Health System Collapsed',
    value: formatText(humanitarianImpact.healthSystemCollapsed ?? '—'),
  });
}
if (humanitarianImpact.foodInsecurity !== undefined) {
  stats.push({
    label: 'Food Insecurity',
    value: formatText(humanitarianImpact.foodInsecurity ?? '—'),
  });
}
if (humanitarianImpact.waterAccess !== undefined) {
  stats.push({
    label: 'Lack of Water Access',
    value: formatText(humanitarianImpact.waterAccess ?? '—'),
  });
}
if (humanitarianImpact.other !== undefined) {
  stats.push({
    label: 'Other',
    value: formatText(humanitarianImpact.other ?? '—'),
  });
}
---

<section class='humanitarian-section' aria-labelledby='humanitarian-heading'>
  <h2 id='humanitarian-heading'>Humanitarian Impact</h2>
  <ImpactGrid stats={stats} />
  <p class='humanitarian-disclaimer'>
    {lastUpdated ? `Last updated: ${lastUpdated}` : ''}
  </p>
</section>

<style>
  .humanitarian-section {
    background: var(--bg-card);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: var(--section-gap);
    margin-bottom: calc(var(--section-gap) - var(--gap-sm));
  }

  .humanitarian-section h2 {
    margin-top: 0;
    border-bottom: var(--section-heading-border);
    padding-bottom: var(--section-heading-padding-bottom);
    font-size: 1.5rem;
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
  }

  .humanitarian-disclaimer {
    margin: 0.6rem 0 0;
    font-size: 0.88rem;
    color: var(--text-muted);
    font-style: italic;
    line-height: 1.2;
    padding-top: var(--space-xs);
    text-align: center;
    opacity: 0.95;
  }

  .stat-item strong {
    color: var(--accent-primary);
    font-weight: var(--font-weight-bold);
    display: block;
    margin-bottom: var(--space-xs);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (width >= 768px) {
    .humanitarian-section {
      padding: calc(var(--section-gap) + var(--space-xs))
        calc(var(--section-gap) + var(--space-xs))
        calc(var(--section-gap) - var(--space-xs));
      margin-bottom: var(--section-gap);
    }

    .impact-stats {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: var(--gap-lg);
    }

    .stat-item {
      padding: var(--card-padding-sm);
    }

    .humanitarian-disclaimer {
      justify-content: center;
      padding-top: 0.15rem;
      margin-top: var(--gap);
    }
  }
</style>
