---
import { formatText } from '../../scripts/utils';
import ImpactGrid from '../blocks/ImpactGrid.astro';

export interface Props {
  humanitarianImpact?: {
    displaced?: string;
    refugees?: string;
    casualties?: string;
    affected?: string;
  };
}

const { humanitarianImpact } = Astro.props as Props;

if (!humanitarianImpact) {
  return null;
}
---

<section class='humanitarian-section' aria-labelledby='humanitarian-heading'>
  <h2 id='humanitarian-heading'>Humanitarian Impact</h2>
  <ImpactGrid
    stats={[
      {
        label: 'Displaced',
        value: formatText(humanitarianImpact.displaced ?? '—'),
      },
      {
        label: 'Refugees',
        value: formatText(humanitarianImpact.refugees ?? '—'),
      },
      {
        label: 'Casualties',
        value: formatText(humanitarianImpact.casualties ?? '—'),
      },
      {
        label: 'Affected',
        value: formatText(humanitarianImpact.affected ?? '—'),
      },
    ]}
  />
  <p class='humanitarian-disclaimer'>
    These figures are estimates — the situation is ongoing and may change.
  </p>
</section>

<style>
  .humanitarian-section {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: var(--section-gap);
    margin-bottom: calc(var(--section-gap) - 0.5rem);
  }

  .humanitarian-section h2 {
    margin-top: 0;
    border-bottom: 2px solid var(--accent-primary);
    padding-bottom: 0.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--heading-gap);
  }

  .impact-stats {
    display: grid;
    grid-template-columns: 1fr;
    gap: 0.75rem;
    margin-top: var(--heading-gap);
  }

  .humanitarian-disclaimer {
    margin: 0.6rem 0 0 0;
    font-size: 0.88rem;
    color: var(--text-muted, #9a9a9a);
    font-style: italic;
    line-height: 1.2;
    padding-top: 0.25rem;
    text-align: center;
    opacity: 0.95;
  }

  .stat-item strong {
    color: var(--accent-primary);
    font-weight: 600;
    display: block;
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (min-width: 769px) {
    .humanitarian-section {
      padding: calc(var(--section-gap) + 0.25rem)
        calc(var(--section-gap) + 0.25rem) calc(var(--section-gap) - 0.25rem);
      margin-bottom: var(--section-gap);
    }
    .impact-stats {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 1rem;
    }
    .stat-item {
      padding: 0.875rem;
    }
    .humanitarian-disclaimer {
      justify-content: center;
      padding-top: 0.15rem;
      margin-top: 1rem;
    }
  }
</style>
