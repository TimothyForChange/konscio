---
import userData from '../../data/user.json';
import { getSouthAfricaEmoji } from '../../scripts/utils';

type Link = { url: string; icon?: string; title: string; description?: string };
type Country = {
  name: string;
  slug: string;
  flag?: string;
  description?: string;
};
type User = {
  name: string;
  profession?: string;
  bio?: string;
  countries?: Country[];
  links?: Link[];
};

const { name, profession, bio } = userData as User;
---

<header class='profile'>
  <div class='profile-picture-content'>
    <figure class='profile-picture' id='profile-picture'>
      <img
        src='/me.webp'
        alt='Portrait of Timothy Brits'
        width='80'
        height='80'
        loading='eager'
        decoding='sync'
      />
    </figure>
  </div>

  <div class='profile-data'>
    <h1 class='profile-name'>{name}</h1>
    <p class='profile-profession'>{profession}</p>
    <div class='profile-bio'>
      <p class='profile-bio-text'>
        {
          (() => {
            const pretoriaIndex = bio?.indexOf('Pretoria');
            if (bio && pretoriaIndex !== undefined && pretoriaIndex !== -1) {
              const before = bio.slice(0, pretoriaIndex + 'Pretoria'.length);
              const after = bio.slice(pretoriaIndex + 'Pretoria'.length);
              const { emoji, ariaLabel } = getSouthAfricaEmoji();
              return (
                <>
                  {before}{' '}
                  <span
                    role='img'
                    aria-label={ariaLabel}
                    style='font-size:1.1em;'
                  >
                    {emoji}
                  </span>
                  {after}
                </>
              );
            }
            return bio;
          })()
        }
      </p>
    </div>
  </div>
</header>

<style>
  .profile {
    margin-top: var(--section-gap);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .profile-picture-content {
    padding: 0.25rem;
    border-radius: 100%;
    border: 2px solid var(--border);
    background: var(--bg-card);
  }

  .profile-picture {
    width: 80px;
    height: 80px;
    border-radius: 100%;
    overflow: hidden;
    background: var(--bg-surface);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .profile-picture img {
    width: 80px;
    height: 80px;
    object-fit: cover;
    object-position: center;
    display: block;
  }

  .profile-data {
    margin-top: calc(var(--heading-gap) * 1.125);
    text-align: center;
  }

  .profile-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: 0.25rem;
  }

  .profile-profession {
    font-size: 1rem;
    font-weight: 400;
    color: var(--text-secondary);
  }

  .profile-bio {
    margin-top: var(--heading-gap);
    max-width: 24rem;
  }

  .profile-bio-text {
    font-size: 1.1rem;
    font-weight: 400;
    color: var(--text-primary);
    line-height: 1.6;
    text-align: center;
  }
</style>
