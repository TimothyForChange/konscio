---
import type { Country } from '../../types/country.ts';

export interface CountryCardProperties extends Partial<Country> {
  slug: string;
  name: string;
}
const { slug, name, flag, description, category } =
  Astro.props as CountryCardProperties;
---

<a
  class:list={['country-card', slug === 'palestine' && 'palestine-card']}
  href={`/${slug}`}
  data-category={category ?? ''}
  role='listitem'
  aria-label={`Learn about ${name}. ${description ?? ''}`}
>
  <div class='country-card-inner'>
    {
      flag ? (
        <span class='country-flag' aria-hidden='true'>
          {flag}
        </span>
      ) : (
        <span class='country-flag-placeholder' aria-hidden='true'>
          üåç
        </span>
      )
    }
    <div class='country-info'>
      <span class='country-name'>{name}</span>
      {description && <span class='country-description'>{description}</span>}
    </div>
  </div>
</a>

<style>
  .country-card {
    display: block;
    background: var(--bg-card);
    border: var(--card-border);
    border-radius: var(--card-radius);
    text-decoration: none;
    transition: var(--card-transition);
    box-sizing: border-box;
    box-shadow: var(--shadow-sm);
    min-height: var(--min-height-card);
  }

  .country-card-inner {
    display: flex;
    align-items: center;
    gap: var(--gap);
    padding: var(--card-padding);
    box-sizing: border-box;
  }

  .country-card:hover {
    background: var(--bg-alt);
    border-color: var(--accent-primary);
    transform: var(--hover-transform);
    box-shadow: var(--hover-shadow);
  }

  .country-card:active {
    transform: var(--active-transform);
    box-shadow: var(--active-shadow);
    transition:
      transform 0.08s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.08s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .palestine-card {
    background: color-mix(in srgb, red 5%, var(--bg-surface));
  }

  .country-flag {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .country-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: 0;
  }

  .country-name {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    font-size: var(--font-size-base);
  }

  .country-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: 1.3;
  }

  @media (width >= 768px) {
    .country-card {
      padding: var(--card-padding);
      min-height: var(--min-height-card-lg);
    }
  }
</style>
