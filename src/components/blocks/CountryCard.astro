---
import type { Country } from '../../types/country';

export interface CountryCardProps extends Partial<Country> {
  slug: string;
  name: string;
}
const { slug, name, flag, description, category } =
  Astro.props as CountryCardProps;

const safeSlug = slug || 'unknown';
const safeName = name || 'Unknown Country';
const safeDescription = description || '';
const safeCategory = category || '';
---

<a href={`/${safeSlug}`} class='country-card' data-category={safeCategory}>
  {
    flag ? (
      <>
        <span class='country-flag' aria-hidden='true'>
          {flag}
        </span>
        <span class='visually-hidden'>Flag of {safeName}</span>
      </>
    ) : (
      <span class='visually-hidden'>No flag available for {safeName}</span>
    )
  }
  <div class='country-info'>
    <span class='country-name'>{safeName}</span>
    {
      safeDescription && (
        <span class='country-description'>{safeDescription}</span>
      )
    }
  </div>
</a>

<style>
  .country-card {
    display: flex;
    align-items: center;
    gap: var(--gap);
    padding: var(--card-padding-sm);
    background: var(--bg-card);
    border: var(--card-border);
    border-radius: var(--card-radius);
    text-decoration: none;
    transition: var(--card-transition);
    min-height: var(--min-height-card);
    box-sizing: border-box;
  }

  .country-card:hover {
    background: var(--bg-alt);
    border-color: var(--accent-primary);
    transform: var(--hover-transform);
    box-shadow: var(--hover-shadow);
  }

  .country-card:active {
    transform: var(--active-transform);
    box-shadow: var(--active-shadow);
    transition:
      transform 0.08s cubic-bezier(0.4, 0, 0.2, 1),
      box-shadow 0.08s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .country-flag {
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .country-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
    min-width: 0;
  }

  .country-name {
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    font-size: var(--font-size-base);
  }

  .country-description {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    line-height: 1.3;
  }

  @media (width >= 768px) {
    .country-card {
      padding: var(--card-padding);
      min-height: var(--min-height-card-lg);
    }
  }
</style>
