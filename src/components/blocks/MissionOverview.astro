---
import missionData from '../../data/mission.json';
import type { Mission } from '../../types/mission.ts';

const mission = missionData as Mission;
const { name, mission: missionStatement, description } = mission;
---

<section class='mission' aria-labelledby='mission-name'>
  <div class='mission-content'>
    <h1 id='mission-name' class='mission-name'>{name}</h1>
    {missionStatement && <p class='mission-profession'>{missionStatement}</p>}

    {
      description && (
        <div class='mission-bio'>
          <p class='mission-bio-text'>{description}</p>
        </div>
      )
    }
  </div>
</section>

<style>
  .mission {
    margin-top: var(--section-gap);
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .mission-content {
    text-align: center;
  }

  .mission-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--space-xs);
  }

  .mission-profession {
    font-size: var(--font-size-base);
    font-weight: 400;
    color: var(--text-secondary);
  }

  .mission-bio {
    margin-top: var(--heading-gap);
    max-width: 32rem;
  }

  .mission-bio-text {
    font-size: var(--font-size-lg);
    font-weight: 400;
    color: var(--text-primary);
    line-height: 1.6;
    text-align: center;
    min-height: 3em;
  }
</style>
