---
import type * as CountryTypes from '../../types/Country';

export interface DonateOrgCardProps extends Partial<CountryTypes.Link> {
  organisation?: string;
}
const { organisation, description, url, title } =
  Astro.props as DonateOrgCardProps;

const rawTitle =
  typeof organisation === 'string' && organisation.trim() !== ''
    ? organisation
    : title;
const safeOrganisation =
  typeof rawTitle === 'string' && rawTitle.trim() !== ''
    ? rawTitle
    : 'Organisation';
const safeDescription = typeof description === 'string' ? description : '';
const safeUrl =
  typeof url === 'string' && url.trim() !== ''
    ? url.startsWith('http')
      ? url
      : `https://${url}`
    : '#';
---

<div class='org-item'>
  <h4>{safeOrganisation}</h4>

  {safeDescription && <p>{safeDescription}</p>}
  <a
    href={safeUrl}
    target='_blank'
    rel='noopener noreferrer'
    class='donate-link'
    aria-label={`Donate to ${safeOrganisation}`}
  >
    <i class='ri-external-link-line' aria-hidden='true'></i>
    Donate
  </a>
</div>

<style>
  .org-item {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: calc(var(--heading-gap) * 0.9);
  }

  .org-item h4 {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text-primary);
    margin: 0 0 0.5rem;
  }

  .org-item p {
    color: var(--text-secondary);
    margin: 0 0 calc(var(--heading-gap));
    line-height: 1.5;
  }

  .donate-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--accent-primary);
    color: var(--on-accent);
    text-decoration: none;
    padding: 0.75rem 1.25rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.95rem;
    transition:
      background-color 0.2s ease,
      transform 0.2s ease,
      box-shadow 0.2s ease;
    min-height: 44px;
    box-sizing: border-box;
  }

  .donate-link:hover {
    background: var(--accent-secondary);
    transform: translateY(-1px);
    box-shadow: 0 4px 12px rgb(0 0 0 / 15%);
  }

  .donate-link:active {
    transform: scale(0.95);
    transition: transform 0.1s ease;
  }

  .donate-link i {
    font-size: 1rem;
  }

  @media (width >= 768px) {
    .org-item {
      padding: 1.25rem;
    }

    .donate-link {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
      min-height: 44px;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    .donate-link {
      min-height: 48px;
      padding: 1rem 1.5rem;
    }

    .donate-link:active {
      background: var(--accent-tertiary);
      transform: scale(0.95);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .donate-link {
      transition: none;
      transform: none;
    }
  }
</style>
