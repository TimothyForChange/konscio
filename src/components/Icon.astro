---
export interface Props {
  name: string;
  size?: number;
  class?: string;
}
const { name, size = 20, class: className = '' } = Astro.props;
const allowedSizes = [16, 20, 24, 32];
const sizeClass = `icon--${allowedSizes.includes(size) ? size : 20}`;
---

<i class={`ri-${name} ${className} ${sizeClass}`.trim()} aria-hidden='true'></i>

<style>
  .icon--16 {
    font-size: 16px;
  }
  .icon--20 {
    font-size: 20px;
  }
  .icon--24 {
    font-size: 24px;
  }
  .icon--32 {
    font-size: 32px;
  }
</style>
