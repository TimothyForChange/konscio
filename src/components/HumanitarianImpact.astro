---
export interface Props {
  humanitarianImpact: {
    displaced: string;
    refugees: string;
    casualties: string;
    affected: string;
  };
}

const { humanitarianImpact } = Astro.props;

function formatText(text: string): string {
  return text
    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
    .replace(/\*(.*?)\*/g, '<em>$1</em>');
}
---

<section class='humanitarian-section' aria-labelledby='humanitarian-heading'>
  <h2 id='humanitarian-heading'>Humanitarian Impact</h2>
  <div class='impact-stats'>
    <div class='stat-item'>
      <strong>Displaced:</strong>{' '}
      <span set:html={formatText(humanitarianImpact.displaced)} />
    </div>
    <div class='stat-item'>
      <strong>Refugees:</strong>{' '}
      <span set:html={formatText(humanitarianImpact.refugees)} />
    </div>
    <div class='stat-item'>
      <strong>Casualties:</strong>{' '}
      <span set:html={formatText(humanitarianImpact.casualties)} />
    </div>
    <div class='stat-item'>
      <strong>Affected:</strong>{' '}
      <span set:html={formatText(humanitarianImpact.affected)} />
    </div>
  </div>
</section>

<style>
  .humanitarian-section {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .humanitarian-section h2 {
    margin-top: 0;
    border-bottom: 2px solid var(--accent-primary);
    padding-bottom: 0.5rem;
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .impact-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1rem;
    margin-top: 1rem;
  }

  .stat-item {
    background: var(--bg-surface);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem;
  }

  .stat-item strong {
    color: var(--accent-primary);
    font-weight: 600;
    display: block;
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  @media (max-width: 768px) {
    .humanitarian-section {
      padding: 1.25rem;
      margin-bottom: 1.5rem;
    }

    .impact-stats {
      grid-template-columns: 1fr;
      gap: 0.75rem;
    }

    .stat-item {
      padding: 0.875rem;
    }
  }
</style>
