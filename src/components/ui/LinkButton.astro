---
export interface Properties {
  url: string;
  title: string;
  description?: string;
  buttonText: string;
}

const { url, title, description, buttonText } = Astro.props as Properties;

const sanitizedUrl = url.startsWith('http') ? url : `https://${url}`;
---

<div class='link-card'>
  <h4 class='link-title'>{title}</h4>
  {description && <p class='link-description'>{description}</p>}
  <a
    href={sanitizedUrl}
    class='link-button'
    target='_blank'
    rel='noopener noreferrer'
    aria-label={`${title} (opens in new tab)`}
  >
    {buttonText}
    <i class='ri-external-link-line' aria-hidden='true'></i>
  </a>
</div>

<style>
  .link-card {
    background: var(--bg-surface);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: calc(var(--heading-gap) * 0.9);
    min-height: 44px;
    box-sizing: border-box;
  }

  .link-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin: 0 0 var(--gap);
    line-height: var(--line-height-base);
  }

  .link-description {
    color: var(--text-secondary);
    margin: 0 0 var(--heading-gap) 0;
    line-height: var(--line-height-base);
  }

  .link-button {
    display: inline-flex;
    align-items: center;
    gap: var(--gap-sm);
    background: var(--accent-primary);
    color: var(--on-accent);
    text-decoration: none;
    padding: 0.75rem 1.25rem;
    border-radius: var(--button-radius);
    font-weight: var(--font-weight-semibold);
    font-size: 0.95rem;
    transition: var(--link-transition);
    min-height: 44px;
    box-sizing: border-box;
  }

  .link-button:hover {
    background: var(--accent-secondary);
    transform: var(--hover-transform);
    box-shadow: var(--hover-shadow);
  }

  .link-button:active {
    transform: scale(0.95);
    transition: transform 0.1s ease;
  }

  .link-button i {
    font-size: 1rem;
  }

  @media (width >= 768px) {
    .link-card {
      padding: var(--gap-xl);
    }

    .link-button {
      padding: 0.75rem 1.25rem;
      font-size: 0.95rem;
      min-height: 44px;
    }
  }

  @media (hover: none) and (pointer: coarse) {
    .link-button {
      min-height: 48px;
      padding: 1rem 1.5rem;
    }

    .link-button:active {
      background: var(--accent-tertiary);
      transform: scale(0.95);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .link-button {
      transition: none;
      transform: none;
    }
  }
</style>
