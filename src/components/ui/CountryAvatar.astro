---
export interface CountryAvatarProps {
  emoji?: string;
  ariaLabel?: string;
  countryName: string;
}
const { emoji, ariaLabel, countryName } = Astro.props as CountryAvatarProps;
---

<span
  class='country-avatar'
  aria-label={ariaLabel ? `${countryName} ${ariaLabel}` : countryName}
>
  {emoji ? emoji : ''}
</span>

<style>
  .country-avatar {
    font-size: 2rem;
    vertical-align: middle;
    margin-right: 0.5rem;
  }

  @media (min-width: 769px) {
    .country-avatar {
      font-size: 2.5rem;
    }
  }
</style>
