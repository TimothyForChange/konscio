---
import { formatText } from '../../utils/text.ts';

export interface TimelineItemProperties {
  year?: string;
  event?: string;
}
const { year, event } = Astro.props as TimelineItemProperties;
---

<div class='timeline-item'>
  <div class='timeline-content'>
    <div class='timeline-year'>{year}</div>
    <div class='timeline-event' set:html={formatText(event ?? '')} />
  </div>
</div>

<style>
  .timeline-item {
    margin-bottom: var(--section-gap);
  }

  .timeline-content {
    background: var(--bg-card);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: var(--card-padding) var(--card-padding-lg);
    box-shadow: var(--shadow-sm);
  }

  .timeline-year {
    font-weight: 700;
    font-size: var(--font-size-sm);
    color: var(--accent-primary);
    margin-bottom: calc(var(--heading-gap) / 2);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .timeline-event {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: var(--font-size-sm);
  }

  .timeline-event strong {
    color: var(--text-primary);
    font-weight: var(--font-weight-bold);
  }

  @media (min-width: 768px) {
    .timeline-item {
      margin-bottom: var(--section-gap);
    }

    .timeline-content {
      padding: var(--card-padding) var(--card-padding-lg);
    }

    .timeline-year {
      font-size: var(--font-size-sm);
    }

    .timeline-event {
      font-size: var(--font-size-sm);
    }
  }
</style>
