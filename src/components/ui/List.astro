---
import missionData from '../../data/mission.json';
import type { Mission, ResourceLink } from '../../types/mission.ts';
import Link from '../shared/Link.astro';

const items: ResourceLink[] = (missionData as Mission).links!;
---

<section class='links-section' aria-labelledby='links-heading'>
  <h2 id='links-heading' class='links-heading'>Links</h2>
  <ul class='list' id='list' role='list'>
    {
      items.map((item: ResourceLink, index: number) => (
        <li class={`list-animated`} style={`--i:${index}`}>
          <Link
            icon={item.icon}
            title={item.title}
            description={item.description}
            url={item.url}
          />
        </li>
      ))
    }
  </ul>
</section>

<style>
  .links-section {
    margin-top: var(--section-gap);
  }

  .links-heading {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
    margin-bottom: var(--gap);
    text-align: center;
  }

  @media (width >= 768px) {
    .links-heading {
      font-size: var(--font-size-xl);
    }
  }

  .list {
    margin: 0;
    display: grid;
    gap: var(--gap-lg);
    list-style: none;
    padding: 0;

    --stagger-step: 80ms;
  }

  .list > li {
    margin: 0;
    padding: 0;
  }

  .list-animated {
    animation-delay: calc(var(--i, 0) * var(--stagger-step, 80ms));
  }
</style>
