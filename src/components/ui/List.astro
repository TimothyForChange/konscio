---
import dataList from '../../data/user.json';
import Link from '../shared/Link.astro';

const items = dataList.links;
---

<section class='links-section'>
  <h2 class='links-heading'>Projects & Links</h2>
  <ul class='list' id='list'>
    {
      items.map((item, index) => (
        <li class={`list-animated`} data-index={index}>
          <Link
            icon={item.icon}
            title={item.title}
            description={item.description}
            url={item.url}
          />
        </li>
      ))
    }
  </ul>
</section>

<style>
  .links-section {
    margin-top: 2rem;
  }

  .links-heading {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    text-align: center;
  }

  @media (max-width: 768px) {
    .links-heading {
      font-size: 1.125rem;
    }
  }

  .list {
    margin: 2rem 0;
    display: grid;
    gap: 1rem;
    list-style: none;
    padding: 0;
  }

  .list > li {
    margin: 0;
    padding: 0;
  }

  .list-animated {
    animation-delay: 0ms;
  }

  .list-animated[data-index='1'] {
    animation-delay: 80ms;
  }

  .list-animated[data-index='2'] {
    animation-delay: 160ms;
  }

  .list-animated[data-index='3'] {
    animation-delay: 240ms;
  }

  .list-animated[data-index='4'] {
    animation-delay: 320ms;
  }

  .list-animated[data-index='5'] {
    animation-delay: 400ms;
  }

  .list-animated[data-index='6'] {
    animation-delay: 480ms;
  }

  .list-animated[data-index='7'] {
    animation-delay: 560ms;
  }
</style>
