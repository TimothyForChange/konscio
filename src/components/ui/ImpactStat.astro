---
import { formatRichText } from '../../utils/text.ts';

export interface Properties {
  label: string;
  value: string;
}

const { label, value } = Astro.props as Properties;
---

<div class='stat-item'>
  <span class='stat-title-flex'>
    <strong class='stat-title'>{label}:</strong>
  </span>
  <div class='stat-value'>
    {
      (() => {
        const formatted = formatRichText(value);
        if (Array.isArray(formatted)) {
          return formatted.map((html: string) => <p set:html={html} />);
        }
        return <span set:html={formatted} />;
      })()
    }
  </div>
</div>

<style>
  .stat-item {
    background: var(--bg-surface);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: var(--card-padding);
  }

  .stat-title-flex {
    display: flex;
    align-items: center;
    gap: 0.5ch;
    margin-bottom: calc(var(--heading-gap) / 4);
  }
  .stat-title {
    color: var(--text-primary);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
  }
  .stat-value {
    color: var(--text-secondary);
    font-size: 1em;
    margin-top: 0.25em;
  }
</style>
