---
export interface Properties {
  label: string;
  value: string;
}

const { label, value } = Astro.props as Properties;
---

<div class='stat-item'>
  <span class='stat-title-flex'>
    <strong class='stat-title'>{label}:</strong>
  </span>
  <span set:html={value} />
</div>

<style>
  .stat-item {
    background: var(--bg-surface);
    border: var(--card-border);
    border-radius: var(--card-radius);
    padding: var(--card-padding);
  }

  .stat-title-flex {
    display: flex;
    align-items: center;
    gap: 0.5ch;
    margin-bottom: calc(var(--heading-gap) / 4);
  }
  .stat-title {
    color: var(--text-primary);
    font-weight: var(--font-weight-bold);
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0;
  }
</style>
