---
import { countryMetadata } from '../scripts/utils';
import BackButton from './BackButton.astro';

export interface Props {
  countryName: string;
}

const { countryName } = Astro.props;
const flagInfo = countryMetadata[countryName];
---

<header class='country-header'>
  <BackButton />
  <h1 class='country-title'>
    {countryName}
    {
      flagInfo && (
        <span class='country-flag' role='img' aria-label={flagInfo.ariaLabel}>
          {flagInfo.emoji}
        </span>
      )
    }
  </h1>
</header>

<style>
  .country-header {
    margin-bottom: 2rem;
  }

  .country-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--text-primary);
    margin: 0 0 1.25rem 0;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    line-height: 1.05;
  }

  .country-flag {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    line-height: 1;
    vertical-align: middle;
  }

  @media (max-width: 768px) {
    .country-title {
      font-size: 2rem;
      gap: 0.5rem;
    }

    .country-flag {
      font-size: 1.5rem;
    }
  }
</style>
