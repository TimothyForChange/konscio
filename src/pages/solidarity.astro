---
import BookmarkNav from "../components/BookmarkNav.astro";
import Layout from "../components/Layout.astro";
import SolidarityCard from "../components/SolidarityCard.astro";

const sections = [
  { id: "south-africa", label: "South Africa & the Continent" },
  { id: "global-south", label: "Global South Solidarity" },
  { id: "food-sovereignty", label: "Peasant Movements & Food Sovereignty" },
  { id: "workers", label: "Working-Class Struggles" },
  { id: "indigenous", label: "Indigenous Resistance & Land Back" },
  { id: "media", label: "Media & Publications" },
  { id: "mutual-aid", label: "Mutual Aid & Community Services" },
  { id: "research", label: "Research, Policy & Accountability" },
];
---

<Layout
  title="Solidarity"
  description="Ecosocialist and allied movements fighting for climate justice, workers' power, decolonial liberation, and solidarity across the Global South."
  showSidebar={false}
>
  <div class="solidarity-page">
    <header class="page-header">
      <h1 class="page-title">Solidarity</h1>
      <hr class="page-rule" />
      <p class="solidarity-intro">
        Groups and movements fighting for climate justice, workers' power, and
        decolonial transformation. Learn, support, or join their struggles.
      </p>
    </header>

    <section class="solidarity-section">
      <BookmarkNav
        sections={sections}
        ariaLabel="Solidarity category navigation"
      />

      <h2 class="category-title" id="south-africa">
        South Africa & the Continent
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Abahlali baseMjondolo"
          description="Mass movement of shack dwellers building democratic power from below; fights for land, housing and dignity via direct action and community organising."
          url="https://abahlali.org"
          ariaLabel="Abahlali baseMjondolo website — opens in a new tab"
        />

        <SolidarityCard
          title="Alternative Information and Development Centre (AIDC)"
          description="Cape Town-based policy and research collective advancing debt justice, public ownership and just-transition alternatives to austerity and extractivism."
          url="https://aidc.org.za"
          ariaLabel="AIDC website — opens in a new tab"
        />

        <SolidarityCard
          title="groundWork"
          description="Environmental justice NGO working with communities to resist polluting industries and push for democratic control of resources and a just transition."
          url="https://groundwork.org.za"
          ariaLabel="groundWork website — opens in a new tab"
        />

        <SolidarityCard
          title="Mining Affected Communities United in Action (MACUA)"
          description="Network of mining-affected communities resisting corporate plunder, evictions and state capture across South Africa."
          url="https://macua.org.za"
          ariaLabel="MACUA website — opens in a new tab"
        />

        <SolidarityCard
          title="Ogiek Peoples' Development Program (OPDP)"
          description="Indigenous-led organisation advancing land justice, cultural survival and legal empowerment for the Ogiek and other Indigenous peoples."
          url="https://www.ogiekpeoples.org"
          ariaLabel="Ogiek Peoples' Development Program website — opens in a new tab"
        />

        <SolidarityCard
          title="Oilwatch Africa"
          description="Pan-African network coordinating resistance to fossil-fuel extraction and defending community land and livelihoods."
          url="https://oilwatch.africa"
          ariaLabel="Oilwatch Africa website — opens in a new tab"
        />

        <SolidarityCard
          title="Rural Women's Assembly"
          description="Feminist peasant movement mobilising rural women around land, seeds, food sovereignty and collective rights."
          url="https://www.ruralwomensassembly.org"
          ariaLabel="Rural Women's Assembly website — opens in a new tab"
        />

        <SolidarityCard
          title="South African Food Sovereignty Campaign (SAFSC)"
          description="Grassroots campaign promoting food sovereignty, agroecology, and the right to food in South African communities."
          url="https://www.safsc.org.za"
          ariaLabel="SAFSC website — opens in a new tab"
        />

        <SolidarityCard
          title="WoMin African Alliance"
          description="Pan-African ecofeminist alliance supporting communities impacted by extractivism and organising for land and climate justice."
          url="https://womin.africa"
          ariaLabel="WoMin African Alliance website — opens in a new tab"
        />

        <SolidarityCard
          title="Zabalaza for Socialism (ZASO)"
          description="Platform amplifying socialist, feminist and anti-imperialist analysis and organising across Southern Africa."
          url="https://zabalaza4socialism.org.za"
          ariaLabel="Zabalaza for Socialism website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="global-south">Global South Solidarity</h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="CADTM (Abolition of Illegitimate Debt)"
          description="International network exposing illegitimate debt and fighting for economic sovereignty and debt cancellation."
          url="https://www.cadtm.org"
          ariaLabel="CADTM website — opens in a new tab"
        />

        <SolidarityCard
          title="Debt Justice (UK)"
          description="Campaign organisation challenging unjust global debt and financial imperialism, supporting movements in the Global South to reclaim economic sovereignty."
          url="https://debtjustice.org.uk"
          ariaLabel="Debt Justice UK website — opens in a new tab"
        />

        <SolidarityCard
          title="Friends of the Earth International"
          description="Global grassroots network campaigning for environmental justice, equitable resource control, and community rights."
          url="https://www.foei.org"
          ariaLabel="Friends of the Earth International website — opens in a new tab"
        />

        <SolidarityCard
          title="International League of Peoples' Struggle (ILPS)"
          description="Global anti-imperialist alliance supporting people's struggles for sovereignty and liberation."
          url="https://peoplesstruggle.org/en/"
          ariaLabel="ILPS website — opens in a new tab"
        />

        <SolidarityCard
          title="Pan-African Today"
          description="Socialist network promoting African liberation, working-class organising and continental unity."
          url="https://panafricatoday.org"
          ariaLabel="Pan-African Today website — opens in a new tab"
        />

        <SolidarityCard
          title="Samidoun Palestinian Prisoner Solidarity Network"
          description="International network organising solidarity for Palestinian prisoners and political prisoners worldwide."
          url="https://samidoun.net"
          ariaLabel="Samidoun website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="food-sovereignty">
        Peasant Movements & Food Sovereignty
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Alliance for Food Sovereignty in Africa (AFSA)"
          description="Coalition of farmers, fisherfolk and Indigenous communities defending agroecology and community control of food systems."
          url="https://afsafrica.org"
          ariaLabel="AFSA website — opens in a new tab"
        />

        <SolidarityCard
          title="La Via Campesina"
          description="Global peasant movement advancing agrarian reform, agroecology and the rights of smallholders."
          url="https://viacampesina.org/en/"
          ariaLabel="La Via Campesina website — opens in a new tab"
        />

        <SolidarityCard
          title="MST (Movimento dos Trabalhadores Rurais Sem Terra)"
          description="Brazilian landless workers' movement organising for land reform, collective farming and agroecology."
          url="https://mst.org.br/english/"
          ariaLabel="MST website — opens in a new tab"
        />

        <SolidarityCard
          title="Nyéléni Movement for Food Sovereignty"
          description="Global process linking peasant and Indigenous struggles for democratic control of food systems."
          url="https://nyeleni.org/en/international-food-sov-movement/"
          ariaLabel="Nyéléni website — opens in a new tab"
        />

        <SolidarityCard
          title="Schools for Chiapas"
          description="Solidarity project supporting autonomous education, healthcare and agroecology in Zapatista territories."
          url="https://schoolsforchiapas.org"
          ariaLabel="Schools for Chiapas website — opens in a new tab"
        />

        <SolidarityCard
          title="Union of Agricultural Work Committees (UAWC)"
          description="Palestinian grassroots organisation advancing land rights, agroecology and rural livelihoods."
          url="https://uawc-pal.org"
          ariaLabel="UAWC website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="workers">Working-Class Struggles</h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="International Labour Network of Solidarity and Struggles"
          description="Network of militant unions coordinating internationalist workplace organising and direct industrial solidarity."
          url="https://laboursolidarity.org"
          ariaLabel="International Labour Network website — opens in a new tab"
        />

        <SolidarityCard
          title="Trade Unions for Energy Democracy (TUED)"
          description="Global network of unions and allied groups advancing democratic control and public ownership of energy, linking workers’ rights, climate justice and just transition."
          url="https://www.tuedglobal.org"
          ariaLabel="TUED website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="indigenous">
        Indigenous Resistance & Land Back
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Asia Indigenous Peoples Pact (AIPP)"
          description="Regional alliance advancing Indigenous rights, land justice and climate resilience across Asia."
          url="https://aippnet.org"
          ariaLabel="AIPP website — opens in a new tab"
        />

        <SolidarityCard
          title="CEMIRIDE (Centre for Minority Rights Development)"
          description="Kenyan organisation supporting Indigenous and minority rights through legal and grassroots advocacy."
          url="https://www.cemiride.org"
          ariaLabel="CEMIRIDE website — opens in a new tab"
        />

        <SolidarityCard
          title="Idle No More"
          description="Grassroots Indigenous movement mobilising for sovereignty, decolonisation and environmental defence."
          url="https://idlenomore.ca"
          ariaLabel="Idle No More website — opens in a new tab"
        />

        <SolidarityCard
          title="Indigenous Environmental Network (IEN)"
          description="Indigenous-led alliance defending land, water and climate justice against extractivism."
          url="https://www.ienearth.org"
          ariaLabel="IEN website — opens in a new tab"
        />

        <SolidarityCard
          title="LandBack.org"
          description="Platform amplifying Land Back campaigns and practical strategies for return of territories to Indigenous communities."
          url="https://thelandback.org"
          ariaLabel="LandBack.org website — opens in a new tab"
        />

        <SolidarityCard
          title="Land Rights Now"
          description="Global alliance securing collective land rights for Indigenous peoples and local communities."
          url="https://www.landrightsnow.org"
          ariaLabel="Land Rights Now website — opens in a new tab"
        />

        <SolidarityCard
          title="NDN Collective"
          description="Indigenous-led organisation building power through organising, philanthropy and narrative change."
          url="https://ndncollective.org"
          ariaLabel="NDN Collective website — opens in a new tab"
        />

        <SolidarityCard
          title="Sogorea Te' Land Trust"
          description="Urban Indigenous land trust supporting rematriation, cultural revitalisation and community stewardship."
          url="https://sogoreate-landtrust.org"
          ariaLabel="Sogorea Te' Land Trust website — opens in a new tab"
        />

        <SolidarityCard
          title="The Red Nation"
          description="Indigenous socialist organisation organising for decolonisation, Land Back and collective liberation."
          url="https://therednation.org"
          ariaLabel="The Red Nation website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="media">Media & Publications</h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Africa Is a Country"
          description="Critical commentary and cultural analysis on African politics and society from a decolonial perspective."
          url="https://africasacountry.com"
          ariaLabel="Africa Is a Country website — opens in a new tab"
        />

        <SolidarityCard
          title="Red Pepper"
          description="Independent left magazine publishing socialist, feminist and anti-imperialist analysis."
          url="https://www.redpepper.org.uk"
          ariaLabel="Red Pepper website — opens in a new tab"
        />

        <SolidarityCard
          title="Peoples Dispatch"
          description="International news platform amplifying struggles and organising from the Global South."
          url="https://peoplesdispatch.org"
          ariaLabel="Peoples Dispatch website — opens in a new tab"
        />

        <SolidarityCard
          title="Tricontinental: Institute for Social Research"
          description="Research and publishing institute producing anti-imperialist dossiers and movement education materials."
          url="https://thetricontinental.org"
          ariaLabel="Tricontinental website — opens in a new tab"
        />

        <SolidarityCard
          title="Workers' World Media Productions (WWMP)"
          description="South African worker media collective producing reporting and education for working-class organising."
          url="https://wwmp.org.za"
          ariaLabel="WWMP website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="mutual-aid">
        Mutual Aid & Community Services
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Mutual Aid Disaster Relief"
          description="Decentralised network offering grassroots disaster response, material aid and mutual-care training."
          url="https://mutualaiddisasterrelief.org"
          ariaLabel="Mutual Aid Disaster Relief website — opens in a new tab"
        />

        <SolidarityCard
          title="Food Not Bombs"
          description="Global network of volunteer collectives reclaiming food to feed people and build mutual aid infrastructure."
          url="https://foodnotbombs.net"
          ariaLabel="Food Not Bombs website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="research">
        Research, Policy & Accountability
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Corporate Europe Observatory"
          description="Investigative group exposing corporate lobbying and campaigning for democratic public interest policy."
          url="https://corporateeurope.org"
          ariaLabel="Corporate Europe Observatory website — opens in a new tab"
        />

        <SolidarityCard
          title="Global Tapestry of Alternatives (GTA)"
          description="Global network connecting community-led, post-capitalist and decolonial initiatives that build regenerative economies and collective self-determination."
          url="https://globaltapestryofalternatives.org"
          ariaLabel="Global Tapestry of Alternatives website — opens in a new tab"
        />

        <SolidarityCard
          title="Transnational Institute (TNI)"
          description="International research and advocacy institute supporting movements for environmental justice, public ownership, demilitarisation, and post-capitalist transformation."
          url="https://www.tni.org"
          ariaLabel="Transnational Institute website — opens in a new tab"
        />
      </div>
    </section>
  </div>
</Layout>

<style>
  .solidarity-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 8);
  }

  .page-title {
    font-family: var(--font-heading-secondary);
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: calc(var(--grid-unit) * 2) auto;
  }

  .solidarity-intro {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto calc(var(--grid-unit) * 6);
  }

  .solidarity-section {
    margin-top: calc(var(--grid-unit) * 8);
    padding-bottom: calc(var(--grid-unit) * 8);
  }

  .solidarity-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
  }

  .category-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: calc(var(--grid-unit) * 8) 0 calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .category-title:first-of-type {
    margin-top: 0;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
