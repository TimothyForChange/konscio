---
import BookmarkNav from "../components/BookmarkNav.astro";
import Layout from "../components/Layout.astro";
import SolidarityCard from "../components/SolidarityCard.astro";

const sections = [
  {
    id: "south-africa-and-the-continent",
    label: "South Africa and the Continent",
  },
  {
    id: "global-south-solidarity-and-anti-imperialism",
    label: "Global South Solidarity and Anti-Imperialism",
  },
  {
    id: "peasant-movements-and-food-sovereignty",
    label: "Peasant Movements and Food Sovereignty",
  },
  {
    id: "working-class-struggles-and-democratic-control",
    label: "Working Class Struggles and Democratic Control",
  },
  {
    id: "community-organising-and-solidarity-economy",
    label: "Community Organising and Solidarity Economy",
  },
  {
    id: "indigenous-resistance-and-land-back",
    label: "Indigenous Resistance and Land Back",
  },
];
---

<Layout
  title="Solidarity"
  description="Ecosocialist and allied movements fighting for climate justice, workers' power, decolonial liberation, and solidarity across the Global South."
  showSidebar={false}
>
  <div class="solidarity-page">
    <header class="page-header">
      <h1 class="page-title">Solidarity</h1>
      <hr class="page-rule" />
      <p class="solidarity-intro">
        Groups and movements fighting for climate justice, workers' power, and
        decolonial transformation. Learn, support, or join their struggles.
      </p>
    </header>

    <section class="solidarity-section">
      <BookmarkNav
        sections={sections}
        ariaLabel="Solidarity category navigation"
      />

      <h2 class="category-title" id="south-africa-and-the-continent">
        South Africa and the Continent
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Abahlali baseMjondolo"
          description="South African movement of over 180,000 shack dwellers building democratic power from below, fighting for land, housing, and dignity through direct action, community organising, and resistance to evictions and state repression."
          url="https://abahlali.org"
          ariaLabel="Abahlali baseMjondolo website — opens in a new tab"
        />

        <SolidarityCard
          title="Alternative Information and Development Centre (AIDC)"
          description="Founded in 1996 in Cape Town, AIDC catalyses South African and broader Global South struggles for economic and climate justice - advancing debt cancellation, tax justice, public ownership and just transition alternatives to austerity and extractivism."
          url="https://aidc.org.za"
          ariaLabel="AIDC website — opens in a new tab"
        />

        <SolidarityCard
          title="Mining Affected Communities United in Action (MACUA)"
          description="Grassroots network of mining-affected communities across South Africa resisting extractivism, corporate plunder, and state capture. Fights for community control of land, resources, and livelihoods."
          url="https://macua.org.za"
          ariaLabel="MACUA website — opens in a new tab"
        />

        <SolidarityCard
          title="Ogiek Peoples' Development Program (OPDP)"
          description="Kenyan Indigenous-led organization advancing land justice, cultural survival, and sustainable development for the Ogiek and other Indigenous peoples through advocacy, legal action, and community empowerment."
          url="https://www.ogiekpeoples.org"
          ariaLabel="Ogiek Peoples' Development Program website — opens in a new tab"
        />

        <SolidarityCard
          title="Oilwatch Africa"
          description="Pan-African network resisting fossil fuel extraction and its social and environmental impacts, building solidarity among African communities for climate justice and a just transition beyond oil and gas."
          url="https://oilwatch.africa"
          ariaLabel="Oilwatch Africa website — opens in a new tab"
        />

        <SolidarityCard
          title="Rural Women's Assembly"
          description="Feminist peasant movement uniting rural women across Southern Africa to defend land, seeds, and food sovereignty. Challenges patriarchy, agribusiness, and capitalist extractivism."
          url="https://www.ruralwomensassembly.org"
          ariaLabel="Rural Women's Assembly website — opens in a new tab"
        />

        <SolidarityCard
          title="South African Food Sovereignty Campaign (SAFSC)"
          description="Grassroots campaign uniting communities, small farmers, and activists to advance food sovereignty, climate justice, and the right to food in South Africa through organizing, education, and direct action."
          url="https://www.safsc.org.za"
          ariaLabel="South African Food Sovereignty Campaign website — opens in a new tab"
        />

        <SolidarityCard
          title="WoMin African Alliance"
          description="Pan-African ecofeminist alliance supporting women, peasants and communities impacted by extractive industries. Builds movements for climate justice, land rights and feminist alternatives to the extractivist model."
          url="https://womin.africa"
          ariaLabel="WoMin African Alliance website — opens in a new tab"
        />

        <SolidarityCard
          title="Zabalaza for Socialism (ZASO)"
          description="Platform amplifying socialist, feminist and anti-imperialist analysis and organising initiatives - publishing statements, interviews and movement debates on extractivism, austerity and democratic struggle in Southern Africa."
          url="https://zabalaza4socialism.org.za"
          ariaLabel="Zabalaza for Socialism website — opens in a new tab"
        />
      </div>

      <h2
        class="category-title"
        id="global-south-solidarity-and-anti-imperialism"
      >
        Global South Solidarity and Anti-Imperialism
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Alliance for Green Socialism (AGS)"
          description="UK-based ecosocialist organisation campaigning for radical transformation of society to end capitalism and achieve climate justice, social equality, and real democracy. AGS links environmental and socialist struggles, working locally and internationally for system change."
          url="https://green-socialist.com"
          ariaLabel="Alliance for Green Socialism website — opens in a new tab"
        />

        <SolidarityCard
          title="Climate Justice Alliance"
          description="A U.S.-based coalition of frontline communities, organizations, and allies advancing a just transition away from extractive industries toward sustainable, regenerative economies rooted in racial, economic, and climate justice."
          url="https://climatejusticealliance.org"
          ariaLabel="Climate Justice Alliance website — opens in a new tab"
        />

        <SolidarityCard
          title="CADTM (Abolition of Illegitimate Debt)"
          description="International network fighting illegitimate and neo-colonial debt, empowering social movements to reclaim economic sovereignty and dismantle financial mechanisms of imperial domination."
          url="https://www.cadtm.org"
          ariaLabel="CADTM website — opens in a new tab"
        />

        <SolidarityCard
          title="Extinction Rebellion Global (XR)"
          description="International movement using non-violent direct action and civil disobedience to demand urgent action on the climate and ecological emergency, rooted in principles of justice, solidarity, and system change."
          url="https://rebellion.global"
          ariaLabel="Extinction Rebellion Global website — opens in a new tab"
        />

        <SolidarityCard
          title="International League of Peoples' Struggle (ILPS)"
          description="Global anti-imperialist alliance uniting grassroots movements and organizations to promote, support, and develop democratic and anti-imperialist struggles for justice, sovereignty, and liberation."
          url="https://peoplesstruggle.org/en/"
          ariaLabel="International League of Peoples' Struggle website — opens in a new tab"
        />

        <SolidarityCard
          title="Pan-African Today"
          description="Socialist network advancing African liberation and continental unity through working-class struggle, anti-imperialism, and people-centred development."
          url="https://panafricatoday.org"
          ariaLabel="Pan-African Today website — opens in a new tab"
        />

        <SolidarityCard
          title="Samidoun Palestinian Prisoner Solidarity Network"
          description="International network supporting Palestinian prisoners and the struggle for liberation, anti-imperialism, and justice through advocacy, campaigns, and global solidarity."
          url="https://samidoun.net"
          ariaLabel="Samidoun Palestinian Prisoner Solidarity Network website — opens in a new tab"
        />

        <SolidarityCard
          title="System Change Not Climate Change (SCNCC)"
          description="North American ecosocialist network organizing for climate justice, anti-capitalism, and international solidarity, uniting labor, Indigenous, and grassroots struggles for system change."
          url="https://systemchangenotclimatechange.org"
          ariaLabel="System Change Not Climate Change website — opens in a new tab"
        />

        <SolidarityCard
          title="Viva Salud"
          description="Belgium-based organization supporting social movements in the Global South to defend the right to health, resist privatization, and build international solidarity for health justice."
          url="https://www.vivasalud.be/en/"
          ariaLabel="Viva Salud website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="peasant-movements-and-food-sovereignty">
        Peasant Movements and Food Sovereignty
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Alliance for Food Sovereignty in Africa (AFSA)"
          description="Coalition of African farmers, fisherfolk, and Indigenous communities advancing agroecology, food sovereignty, and resistance to corporate control of agriculture."
          url="https://afsafrica.org"
          ariaLabel="Alliance for Food Sovereignty in Africa website — opens in a new tab"
        />

        <SolidarityCard
          title="Degrowth International Network (IDN)"
          description="Global network of organizations and individuals advancing post-growth, ecological justice, and economic alternatives to capitalism, supporting movements for a fair and sustainable future."
          url="https://degrowth.net"
          ariaLabel="Degrowth International Network website — opens in a new tab"
        />

        <SolidarityCard
          title="La Via Campesina"
          description="International peasant movement of 180 organisations in 81 countries representing over 200 million peasants, small farmers and landless workers - advancing food sovereignty, agrarian reform and agroecological transformation."
          url="https://viacampesina.org/en/"
          ariaLabel="La Via Campesina website — opens in a new tab"
        />

        <SolidarityCard
          title="MST (Movimento dos Trabalhadores Rurais Sem Terra)"
          description="Brazil's landless workers' movement fighting for agrarian reform, food sovereignty, and collective land ownership through direct action, agroecology, education, and popular organisation."
          url="https://mst.org.br/english/"
          ariaLabel="MST Brazil website — opens in a new tab"
        />

        <SolidarityCard
          title="Navdanya International"
          description="International network led by Dr. Vandana Shiva, championing agroecology, seed freedom, biodiversity, and food sovereignty through grassroots organizing, education, and global campaigns."
          url="https://navdanyainternational.org"
          ariaLabel="Navdanya International website — opens in a new tab"
        />

        <SolidarityCard
          title="Nyéléni Movement for Food Sovereignty"
          description="Global process rooted in the 2007 Mali Nyéléni Forum, linking peasant, Indigenous and grassroots movements defending land, seeds, biodiversity and democratic control of food systems against agribusiness and imperialism."
          url="https://nyeleni.org/en/international-food-sov-movement/"
          ariaLabel="Nyéléni Movement for Food Sovereignty website — opens in a new tab"
        />

        <SolidarityCard
          title="Schools for Chiapas"
          description="Supports autonomous education, agroecology, and healthcare projects in Chiapas, Mexico, in solidarity with Zapatista communities and their revolutionary self-governance."
          url="https://schoolsforchiapas.org"
          ariaLabel="Schools for Chiapas website — opens in a new tab"
        />

        <SolidarityCard
          title="Union of Agricultural Work Committees (UAWC)"
          description="Palestinian grassroots organization advancing food sovereignty, land rights, and agroecology for small farmers and rural communities through organizing, advocacy, and resistance to occupation."
          url="https://uawc-pal.org"
          ariaLabel="Union of Agricultural Work Committees website — opens in a new tab"
        />
      </div>

      <h2
        class="category-title"
        id="working-class-struggles-and-democratic-control"
      >
        Working Class Struggles and Democratic Control
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="International Labour Network of Solidarity and Struggles"
          description="Global network of militant trade unions coordinating class struggle and internationalist organising to build working-class power beyond borders and bureaucracy."
          url="https://laboursolidarity.org"
          ariaLabel="International Labour Network of Solidarity and Struggles website — opens in a new tab"
        />

        <SolidarityCard
          title="Trade Unions for Energy Democracy (TUED)"
          description="Global trade union network demanding democratic control of energy systems, public ownership, and a just transition beyond fossil fuels and corporate capture."
          url="https://www.tuedglobal.org"
          ariaLabel="Trade Unions for Energy Democracy website — opens in a new tab"
        />

        <SolidarityCard
          title="Workers' World Media Productions (WWMP)"
          description="South African worker media and education collective advancing democratic control, class consciousness, and solidarity across the working class."
          url="https://wwmp.org.za"
          ariaLabel="Workers' World Media Productions website — opens in a new tab"
        />
      </div>

      <h2
        class="category-title"
        id="community-organising-and-solidarity-economy"
      >
        Community Organising and Solidarity Economy
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Community Movement Builders"
          description="Black-led organisation building power in Atlanta and beyond through community self-defence, cooperative economics, political education, and grassroots organising against gentrification, policing, and environmental racism."
          url="https://communitymovementbuilders.org"
          ariaLabel="Community Movement Builders website — opens in a new tab"
        />

        <SolidarityCard
          title="Cooperation Jackson"
          description="Building a solidarity economy and grassroots democracy in Jackson, Mississippi through worker cooperatives, mutual aid, popular assemblies, and community self-determination."
          url="https://cooperationjackson.org"
          ariaLabel="Cooperation Jackson website — opens in a new tab"
        />

        <SolidarityCard
          title="Ende Gelände"
          description="Radical climate justice alliance in Europe using mass direct action to resist fossil fuels, capitalism, and colonialism, while building international solidarity for system change."
          url="https://www.ende-gelaende.org"
          ariaLabel="Ende Gelände website — opens in a new tab"
        />

        <SolidarityCard
          title="Mutual Aid Disaster Relief (MADR)"
          description="Grassroots network rooted in the principles of mutual aid, solidarity and autonomous community action. MADR builds disaster-resilience infrastructures, supports self-organised relief and creates networks of cooperation against extractive, hierarchical responses to crisis."
          url="https://mutualaiddisasterrelief.org"
          ariaLabel="Mutual Aid Disaster Relief website — opens in a new tab"
        />

        <SolidarityCard
          title="Philly Thrive"
          description="Grassroots, multiracial organization in Philadelphia uniting residents for environmental and housing justice. Won the closure of the South Philly oil refinery and now organizes for the Right to Breathe, housing justice, and community-led redevelopment, centering those most impacted by environmental racism."
          url="https://www.phillythrive.org"
          ariaLabel="Philly Thrive website — opens in a new tab"
        />
      </div>

      <h2 class="category-title" id="indigenous-resistance-and-land-back">
        Indigenous Resistance and Land Back
      </h2>

      <div class="solidarity-grid">
        <SolidarityCard
          title="Asia Indigenous Peoples Pact (AIPP)"
          description="Regional alliance advancing Indigenous rights, land, climate justice, and self-determination across Asia through advocacy, capacity building, and movement building."
          url="https://aippnet.org"
          ariaLabel="Asia Indigenous Peoples Pact website — opens in a new tab"
        />

        <SolidarityCard
          title="CEMIRIDE (Centre for Minority Rights Development)"
          description="Kenyan organization advancing the rights of Indigenous and minority communities through advocacy, legal support, and grassroots organizing for land justice, cultural survival, and self-determination."
          url="https://www.cemiride.org"
          ariaLabel="CEMIRIDE website — opens in a new tab"
        />

        <SolidarityCard
          title="Idle No More"
          description="Grassroots Indigenous movement that began in 2012 in Canada and continues to mobilise for sovereignty, decolonisation, and environmental justice. Idle No More organises round dances, teach-ins, and direct action to defend the land, water, and Indigenous rights against extractivism and colonial state violence."
          url="https://idlenomore.ca"
          ariaLabel="Idle No More website — opens in a new tab"
        />

        <SolidarityCard
          title="Indigenous Environmental Network (IEN)"
          description="Indigenous-led global alliance fighting for climate justice, sovereignty, and the defence of Mother Earth against extractivism, colonialism, and capitalism."
          url="https://www.ienearth.org"
          ariaLabel="Indigenous Environmental Network website — opens in a new tab"
        />

        <SolidarityCard
          title="LandBack.org"
          description="Platform and movement supporting the return of land to Indigenous peoples, amplifying Land Back campaigns, education, and direct action for decolonization and Indigenous sovereignty."
          url="https://thelandback.org"
          ariaLabel="LandBack.org website — opens in a new tab"
        />

        <SolidarityCard
          title="Land Rights Now"
          description="Global alliance of Indigenous peoples, local communities, and allies mobilising to secure collective land and territorial rights. Land Rights Now connects grassroots struggles for land justice, biodiversity protection, and climate resilience as part of a worldwide movement to decolonise land ownership."
          url="https://www.landrightsnow.org"
          ariaLabel="Land Rights Now website — opens in a new tab"
        />

        <SolidarityCard
          title="NDN Collective"
          description="Indigenous-led organization dedicated to building Indigenous power through organizing, activism, philanthropy, grantmaking, and narrative change. NDN Collective advances justice, equity, and sustainable solutions for Indigenous peoples and Mother Earth."
          url="https://ndncollective.org"
          ariaLabel="NDN Collective website — opens in a new tab"
        />

        <SolidarityCard
          title="Sogorea Te' Land Trust"
          description="Urban Indigenous women-led land trust in the San Francisco Bay Area, rematriating Ohlone land and supporting Indigenous cultural revitalization, land return, and community healing."
          url="https://sogoreate-landtrust.org"
          ariaLabel="Sogorea Te' Land Trust website — opens in a new tab"
        />

        <SolidarityCard
          title="The Red Nation"
          description="Indigenous socialist organisation uniting Native liberation and socialist struggle. Organises for decolonisation, land back, and ecological survival through direct action, political education, and solidarity across oppressed nations."
          url="https://therednation.org"
          ariaLabel="The Red Nation website — opens in a new tab"
        />
      </div>
    </section>
  </div>
</Layout>

<style>
  .solidarity-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 8);
  }

  .page-title {
    font-family: var(--font-heading-secondary);
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: calc(var(--grid-unit) * 2) auto;
  }

  .solidarity-intro {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto calc(var(--grid-unit) * 6);
  }

  .solidarity-section {
    margin-top: calc(var(--grid-unit) * 8);
    padding-bottom: calc(var(--grid-unit) * 8);
  }

  .solidarity-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
  }

  .category-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: calc(var(--grid-unit) * 8) 0 calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .category-title:first-of-type {
    margin-top: 0;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
