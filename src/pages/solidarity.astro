<Layout
  title="Solidarity"
  description="Eco-socialist and allied movements fighting for climate justice, workers' power, decolonial liberation, and solidarity across borders."
  showSidebar={false}
>
  <div class="solidarity-page">
    <header class="page-header">
      <h1 class="page-title">Solidarity</h1>
      <hr class="page-rule" />
      <p class="solidarity-intro">
        Groups and movements fighting for climate justice, workers' power,
        decolonial transformation and ecological justice. Learn, support, or
        join their struggles.
      </p>
    </header>

    <section class="solidarity-section">
      <BookmarkNav
        sections={sections}
        ariaLabel="Solidarity category navigation"
      />

      <h2 class="category-title" id="labour">
        Labour & Working-Class Movements
      </h2>
      <div class="solidarity-grid">
        {labour.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="economic-solidarity">
        Economic & Anti-Imperialist Solidarity
      </h2>
      <div class="solidarity-grid">
        {economicSolidarity.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="food-sovereignty">
        Peasant Movements & Food Sovereignty
      </h2>
      <div class="solidarity-grid">
        {foodSovereignty.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="indigenous">
        Indigenous & Land Justice Movements
      </h2>
      <div class="solidarity-grid">
        {indigenous.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="ecology">Ecological & Climate Justice</h2>
      <div class="solidarity-grid">
        {ecology.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="mutual-aid">
        Mutual Aid & Community Solidarity
      </h2>
      <div class="solidarity-grid">
        {mutualAid.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="movement-media">Movement Media</h2>
      <div class="solidarity-grid">
        {movementMedia.map((card) => <SolidarityCard {...card} />)}
      </div>

      <h2 class="category-title" id="research-education">
        Research & Education
      </h2>
      <div class="solidarity-grid">
        {researchEducation.map((card) => <SolidarityCard {...card} />)}
      </div>
    </section>
  </div>
</Layout>

<style>
  .solidarity-page {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--content-padding);
  }

  .page-header {
    text-align: center;
    margin-bottom: calc(var(--grid-unit) * 8);
  }

  .page-title {
    font-family: var(--font-heading-secondary);
    font-size: 2.5rem;
    font-weight: 900;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .page-rule {
    height: 4px;
    background-color: var(--color-accent);
    border: none;
    width: 120px;
    margin: calc(var(--grid-unit) * 2) auto;
  }

  .solidarity-intro {
    font-size: 1.25rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto calc(var(--grid-unit) * 6);
  }

  .solidarity-section {
    margin-top: calc(var(--grid-unit) * 8);
    padding-bottom: calc(var(--grid-unit) * 8);
  }

  .solidarity-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: calc(var(--grid-unit) * 4);
  }

  .category-title {
    font-family: var(--font-heading-secondary);
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--color-accent);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    margin: calc(var(--grid-unit) * 8) 0 calc(var(--grid-unit) * 3);
    text-align: center;
  }

  .category-title:first-of-type {
    margin-top: 0;
  }

  html {
    scroll-behavior: smooth;
  }
</style>
