{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "emoji": {
      "type": "string"
    },
    "ariaLabel": {
      "type": "string"
    },
    "currentCrisisSummary": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "humanitarianImpact": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "description"
        ],
        "additionalProperties": false
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string",
            "minLength": 4,
            "maxLength": 20
          },
          "event": {
            "type": "string"
          }
        },
        "required": [
          "year",
          "event"
        ],
        "additionalProperties": false
      }
    },
    "colonialRoot": {
      "type": "object",
      "properties": {
        "colonialPower": {
          "type": "string"
        },
        "legacy": {
          "type": "string"
        }
      },
      "required": [
        "colonialPower",
        "legacy"
      ],
      "additionalProperties": false
    },
    "imperialRoot": {
      "type": "object",
      "properties": {
        "imperialPower": {
          "type": "string"
        },
        "legacy": {
          "type": "string"
        }
      },
      "required": [
        "imperialPower",
        "legacy"
      ],
      "additionalProperties": false
    },
    "historicalContext": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "description"
        ],
        "additionalProperties": false
      }
    },
    "takeAction": {
      "type": "object",
      "properties": {
        "donate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "organisation": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              },
              "buttonText": {
                "type": "string"
              }
            },
            "required": [
              "organisation",
              "description",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "advocacy": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "description": {
                "type": "string"
              }
            },
            "required": [
              "title",
              "description"
            ],
            "additionalProperties": false
          }
        }
      },
      "required": [
        "donate",
        "advocacy"
      ],
      "additionalProperties": false
    },
    "reading": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "url",
          "description"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "name",
    "emoji",
    "ariaLabel",
    "currentCrisisSummary",
    "lastUpdated",
    "humanitarianImpact",
    "timeline",
    "historicalContext",
    "takeAction",
    "reading"
  ],
  "additionalProperties": false
}