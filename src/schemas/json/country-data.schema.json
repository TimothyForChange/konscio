{
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "name": {
      "type": "string"
    },
    "emoji": {
      "type": "string"
    },
    "ariaLabel": {
      "type": "string"
    },
    "currentCrisisSummary": {
      "type": "string"
    },
    "lastUpdated": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "humanitarianImpact": {
      "type": "object",
      "properties": {
        "displaced": {
          "type": "string"
        },
        "refugees": {
          "type": "string"
        },
        "casualties": {
          "type": "string"
        },
        "affected": {
          "type": "string"
        },
        "livingInPoverty": {
          "type": "string"
        },
        "childrenOutOfSchool": {
          "type": "string"
        },
        "healthSystemCollapsed": {
          "type": "string"
        },
        "foodInsecurity": {
          "type": "string"
        },
        "lackOfWaterAccess": {
          "type": "string"
        },
        "sexualViolence": {
          "type": "string"
        },
        "livelihoodsAndEconomicLoss": {
          "type": "string"
        },
        "lackOfRightsAndLivelihoods": {
          "type": "string"
        },
        "climateVulnerability": {
          "type": "string"
        }
      },
      "required": [
        "displaced",
        "refugees",
        "casualties",
        "affected"
      ],
      "additionalProperties": false
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "year": {
            "type": "string"
          },
          "event": {
            "type": "string"
          }
        },
        "required": [
          "year"
        ],
        "additionalProperties": false
      }
    },
    "colonialRoot": {
      "type": "object",
      "properties": {
        "colonialPower": {
          "type": "string"
        },
        "legacy": {
          "type": "string"
        }
      },
      "required": [
        "colonialPower",
        "legacy"
      ],
      "additionalProperties": false
    },
    "imperialRoot": {
      "type": "object",
      "properties": {
        "imperialPower": {
          "type": "string"
        },
        "legacy": {
          "type": "string"
        }
      },
      "required": [
        "imperialPower",
        "legacy"
      ],
      "additionalProperties": false
    },
    "historicalContext": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "internationalLawAndAccountability": {
      "type": "string"
    },
    "takeAction": {
      "type": "object",
      "properties": {
        "donate": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "organisation": {
                "type": "string"
              },
              "description": {
                "type": "string"
              },
              "url": {
                "type": "string",
                "format": "uri"
              }
            },
            "required": [
              "organisation",
              "description",
              "url"
            ],
            "additionalProperties": false
          }
        },
        "advocacy": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "donate",
        "advocacy"
      ],
      "additionalProperties": false
    },
    "reading": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string"
          }
        },
        "required": [
          "title",
          "url"
        ],
        "additionalProperties": false
      }
    }
  },
  "required": [
    "name",
    "emoji",
    "ariaLabel",
    "currentCrisisSummary",
    "lastUpdated",
    "humanitarianImpact",
    "timeline",
    "historicalContext",
    "takeAction",
    "reading"
  ],
  "additionalProperties": false,
  "$schema": "https://json-schema.org/draft/2019-09/schema#"
}